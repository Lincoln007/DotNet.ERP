<control:LoginWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Pharos.POS.Retailing.Login"
        Title="{Binding Title}" Icon="{Binding LogoIcon}" Height="400" Width="700" SnapsToDevicePixels="True" WindowStyle="None" AllowsTransparency="True" SettingsCommand="{Binding SettingsCommand}" >
    <control:LoginWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\LoginStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </control:LoginWindow.Resources>
    <control:LoginWindow.Background>
        <ImageBrush ImageSource="{Binding BackgroundImage}"/>
    </control:LoginWindow.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <control:IconTextBox x:Name="txtAccount" TabIndex="0" Text="{Binding Account}"  Style="{StaticResource IconTextBoxStyle}" Icon="Images\Login\user.png"/>
            <control:IconPasswordBox x:Name="txtPassword"  TabIndex="1" Password="{Binding Password,Mode=TwoWay}" Style="{StaticResource IconPasswordBoxStyle}" Icon="Images\Login\lock.png"/>
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <control:PosButton x:Name="btnLogin" TabIndex="2" Background="#20A393" Foreground="White" Margin="0" FontSize="16" Width="120" Height="40" Content="登录" Command="{Binding LoginCommand}" CommandParameter="false"/>
                <control:PosButton  Grid.Column="1" TabIndex="3" Background="Gray" Foreground="White" FontSize="16" Margin="0" Width="80" Height="40" Content="练习" Command="{Binding LoginCommand}"  CommandParameter="true"/>

            </Grid>
        </StackPanel>

        <StackPanel  Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Foreground="#ffffff" FontSize="12" Margin="5" Text="{Binding AppName}" />
        </StackPanel>
    </Grid>
</control:LoginWindow>
