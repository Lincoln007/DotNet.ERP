<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
              xmlns:model="clr-namespace:Pharos.POS.Retailing.Models.ViewModels;assembly=Pharos.POS.Retailing"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
              DataType="{x:Type model:ServicesConfiguration}">
    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="titleStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style x:Key="contentStyle" TargetType="{x:Type control:IconTextBox}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="200"></Setter>
                <Setter Property="Height" Value="40"></Setter>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="3"></Setter>
            </Style>
            <Style TargetType="{x:Type control:PosButton}">
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="180"></Setter>
                <Setter Property="Height" Value="45"></Setter>
            </Style>
            <Style TargetType="GroupBox">
                <Setter Property="Foreground" Value="White"></Setter>

                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="BorderBrush" Value="Gray"></Setter>
                <Setter Property="Margin" Value="10,5"></Setter>

            </Style>
            <Style TargetType="{x:Type control:ToggleSwitchButton}">
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
        </StackPanel.Resources>
        <GroupBox Header="API设置">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0">
                    <control:ToggleSwitchButton Content="远程优先" IsChecked="{Binding ServerPreferred, Mode=TwoWay}"/>
                </WrapPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="远程 IP："/>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding ServerHostIp, Mode=TwoWay}"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource titleStyle}" Text="端口："/>
                    <control:IconTextBox  Grid.Column="3" Style="{StaticResource contentStyle}" Width="90" Text="{Binding ServerHostPort, Mode=TwoWay}"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="本地 IP："/>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding LocalHostIp, Mode=TwoWay}"/>
                    <TextBlock Grid.Column="2" Style="{StaticResource titleStyle}" Text="端口："/>
                    <control:IconTextBox  Grid.Column="3" Style="{StaticResource contentStyle}" Width="90" Text="{Binding LocalHostPort, Mode=TwoWay}"/>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Header="软件更新">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="当前版本：" Style="{StaticResource titleStyle}"/>
                <TextBlock Grid.Column="1" Text="{Binding CurrentVersion, Mode=OneWay}" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"/>
                <control:PosButton Grid.Column="2" Content="更新" Width="120" Margin="0" Background="Gray" Command="{Binding UpdateCommand}" />
            </Grid>
        </GroupBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <control:PosButton Grid.Column="1" Content="保存" Background="#659D15" Command="{Binding SaveCommand}" />
        </Grid>
    </StackPanel>
</DataTemplate>
