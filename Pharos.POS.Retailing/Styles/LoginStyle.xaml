<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyle.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type control:IconTextBox}" BasedOn="{StaticResource BaseIconTextBoxStyle}" x:Key="IconTextBoxStyle">
        <Setter Property="Margin" Value="5"></Setter>
    </Style>
    <Style TargetType="{x:Type control:IconPasswordBox}" BasedOn="{StaticResource BaseIconPasswordBoxStyle}" x:Key="IconPasswordBoxStyle">
        <Setter Property="Margin" Value="5"></Setter>
    </Style>

</ResourceDictionary>