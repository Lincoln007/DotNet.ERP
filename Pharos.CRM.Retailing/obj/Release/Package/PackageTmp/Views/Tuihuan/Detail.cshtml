@{
    ViewBag.Title = Pharos.Sys.SysConstPool.Page_Title;
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<style type="text/css">.input{width:180px}</style>
<div class="default-form">
    @if (Convert.ToInt16(ViewData.Eval("ReturnType")) == 1)
    {
        <table width="100%" id="huan" height="150px">
            <tr><th align="right">换货信息:</th><th colspan="3"></th></tr>
            <tr>
                <td class="name">原商品条码:</td>
                <td class="input">@Html.DisplayText("ProcBarcode")</td>
                <td class="name">商品名称:</td>
                <td class="input">@Html.DisplayText("ProcTitle")</td>
            </tr>
            <tr>
                <td class="name formbox">交易数量:</td>
                <td class="input formbox">@Html.DisplayText("BuyNum")</td>
                <td class="name formbox">换货理由:</td>
                <td class="input formbox">@Html.DisplayText("Reason")</td>
            </tr>
            <tr>
                <td class="name">新商品条码:</td>
                <td class="input">@Html.DisplayText("HuanNewBarcode")</td>
                <td class="name">商品名称:</td>
                <td class="input">@Html.DisplayText("HuanNewTitle")</td>
            </tr>
            <tr>
                <td class="name">换货数量:</td>
                <td class="input">@Html.DisplayText("ReturnNum")</td>
                <td class="name">换货补价:</td>
                <td class="input">@Html.DisplayText("ReturnPrice")</td>
            </tr>
        </table>
    }
    else
    {
        <table width="100%" id="tui" height="200px">
            <tr><th align="right">退货信息:</th><th colspan="3"></th></tr>
            <tr>
                <td class="name">商品条码:</td>
                <td class="input">@Html.DisplayText("ProcBarcode")</td>
                <td class="name">商品名称:</td>
                <td class="input">@Html.DisplayText("ProcTitle")</td>
            </tr>
            <tr>
                <td class="name">交易数量:</td>
                <td class="input">@Html.DisplayText("BuyNum")</td>
                <td class="name">退货数量:</td>
                <td class="input">@Html.DisplayText("ReturnNum")</td>
            </tr>
            <tr>
                <td class="name">退货单价:</td>
                <td class="input">@Html.DisplayText("ReturnPrice")</td>
                <td class="name">退货理由:</td>
                <td class="input">@Html.DisplayText("Reason")</td>

            </tr>
            <tr>
                <td class="name">返还方式:</td>
                <td class="input">@Html.DisplayText("TuiType")</td>
                <td class="name">小 计:</td>
                <td class="input">@Html.DisplayText("TuiTotal")</td>
            </tr>
            <tr>
                <td class="name">卡号/帐号:</td>
                <td class="input">@Html.DisplayText("TuiCardNo")</td>
                <td class="name">持卡人:</td>
                <td class="input">@Html.DisplayText("TuiCarder")</td>
            </tr>
        </table>
    }
</div>