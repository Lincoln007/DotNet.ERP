@model ImportSet
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_ImportLayout.cshtml";
    var cols = Form.GetExcelCol();
    var datas = Model.FieldCols;
}
<div class="default-form" style="width:600px">
    @using (Html.BeginForm("Import","Supplier",FormMethod.Post,new{enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o=>o.Id)
        <table style="margin:10px;">
            <tr>
                <th>导入文件：</th>
                <td><input type="text" class="easyui-filebox" name="file1" data-options="buttonText:'选择文件',prompt:'请选择Excel文件...',required:true,missingMessage:'请选择导入文件'" style="width:300px;" /></td>
            </tr>
        </table>
        <fieldset style="margin:0px;margin-bottom:5px;">
            <legend>导入基本配置</legend>
            <table style="margin:10px 20px 0px 10px;width:100%;height:150px;">
                <tr>
                    <th>@Html.Hidden("FieldName", "ClassifyId") 分 类：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("ClassifyId") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Designee") 指派人：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Designee") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Title") 简 称：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Title") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "FullTitle") 全 称：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("FullTitle") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Linkman") 联系人：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Linkman") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "MobilePhone") 手 机：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("MobilePhone") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "Tel") 电 话：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Tel") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Email") 电子邮箱：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Email") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Address") 联系地址：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Address") + "'" })</td>
                </tr>
                <tr>
                    <th>起始数：</th>
                    <td>@Html.TextBoxFor(o => o.MinRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>最大数：</th>
                    <td>@Html.TextBoxFor(o => o.MaxRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>新建关联记录：</th>
                    <td>@Html.CheckBoxFor(o => o.RefCreate)</td>
                </tr>
            </table>
        </fieldset>
    }
</div>