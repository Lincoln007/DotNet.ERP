@{
    ViewBag.Title = "MemberCardPayDetail";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "发卡", delText: "移除", hideDel: true, hideEdit: true, hideAdd: true));
}
@section search{
    <table class="table-toolbar">
        <tr>
            <td class="label-toolbar">
                <label>类型：</label>
            </td>
            <td class="input-toolbar">
                @Html.DropDownList("cardtype", ViewBag.CardType as List<SelectListItem>, new { @class = "easyui-combobox", data_options = "editable:false" })
            </td>
            <td class="label-toolbar">
                <label>来源：</label>
            </td>
            <td class="input-toolbar">
                @Form.Combobox("storeIds", ViewBag.shops as List<SelectListItem>, dataOptions: "editable:false,panelMaxHeight:200,multiple:false")
            </td>
            <td class="label-toolbar">
                <label>卡号：</label>
            </td>
            <td class="input-toolbar">
                <input id="cardNo" name="cardNo" class="easyui-textbox" data-options="prompt:'会员卡号'" />
            </td>
            <td class="label-toolbar"></td>
            <td>
                <label>消费日期：</label>
            </td>
            <td class="input-toolbar">
                <input name="beginDate" class="datacontrol Wdate" style="width:120px" />
            </td>
            <td style="float:left;margin-left:7px;margin-right:7px;line-height:28px;">-</td>
            <td class="input-toolbar">
                <input name="endDate" class="datacontrol Wdate" style="width:120px" />
            </td>
        </tr>
    </table>
}
<script>
    pharos.manager.geturl = "@Url.Action("FindMemberCardPayDetailPageList")";
    pharos.manager.showFooter = true;
    pharos.manager.columns = [[
        { field: 'OrderSN', title: '订单号', width: 100 },
        {
            field: 'CardSN', title: '会员卡号', width: 100, formatter: function (value, row, index) {
                return value.replace(/(.{4})/g, '$1 ');
            }
        },
        { field: 'Price', title: '消费金额', width: 100 },
        { field: 'StoreTitle', title: '门店', width: 100 },
        { field: 'CardType', title: '卡类型', width: 100 },
        { field: 'CreateDT', title: '消费时间', width: 100 },
    ]]
</script>