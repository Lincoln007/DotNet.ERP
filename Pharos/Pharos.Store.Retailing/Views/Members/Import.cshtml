@model ImportSet
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_ImportLayout.cshtml";
    var cols = Form.GetExcelCol();
    var datas = Model.FieldCols;
}
<div class="default-form" style="width:600px">
    @using (Html.BeginForm("Import", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o => o.Id)
        <table style="margin:10px;">
            <tr>
                <th>导入文件：</th>
                <td><input type="text" class="easyui-filebox" name="file1" data-options="buttonText:'选择文件',prompt:'请选择Excel文件...',required:true,missingMessage:'请选择导入文件'" style="width:300px;" /></td>
            </tr>
        </table>
        <fieldset style="margin:0px;margin-bottom:5px;">
            <legend>导入基本配置</legend>
            <table style="margin:10px 20px 0px 10px;width:100%">
                <tr>

                    <th>@Html.Hidden("FieldName", "BatchSN") 卡类型：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("BatchSN") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "MemberId") 会员：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("MemberId") + "'" })</td>

                    <th>@Html.Hidden("FieldName", "ReChargeTotal") 充值总额：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("ReChargeTotal") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "Balance") 余额：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Balance") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "ExpiryStart") 有效期开始：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("ExpiryStart") + "'" })</td>

                    <th>@Html.Hidden("FieldName", "ExpiryEnd") 有效期截止：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("ExpiryEnd") + "'" })</td>

                </tr>

                <tr>
                    <th>起始行：</th>
                    <td>@Html.TextBoxFor(o => o.MinRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>终止行：</th>
                    <td>@Html.TextBoxFor(o => o.MaxRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>新建关联记录：</th>
                    <td>@Html.CheckBoxFor(o => o.RefCreate)</td>
                </tr>
            </table>
        </fieldset>
    }
</div>
