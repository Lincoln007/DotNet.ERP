@model ImportSet
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_ImportLayout.cshtml";
    var cols = Form.GetExcelCol();
    var datas = Model.FieldCols;
}
<div class="default-form" style="width:95%">
    @using (Html.BeginForm("InboundImport", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o => o.Id)
        @Html.Hidden("StoreId", Request["StoreId"])
        @Html.Hidden("SupplierID", Request["SupplierID"])
        <table style="margin:10px;">
            <tr>
                <th>导入文件：</th>
                <td><input type="text" class="easyui-filebox" name="file1" data-options="buttonText:'选择文件',prompt:'请选择Excel文件...',required:true,missingMessage:'请选择导入文件'" style="width:300px;" /></td>
            </tr>
        </table>
        <fieldset style="margin:0px;margin-bottom:5px;">
            <legend>导入基本配置</legend>
            <table style="margin:10px 20px 0px 10px;width:100%">
                <tr>
                    <th>@Html.Hidden("FieldName", "Barcode") 条码：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("Barcode") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "Title") 品名：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("Title") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "BuyPrice") 进 价：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("BuyPrice") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "InboundNumber") 入库数量：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("InboundNumber") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "SubUnitId") 单 位：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("SubUnitId") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "SysPrice") 系统售价：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("SysPrice") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "ProducedDate") 生产日期：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("ProducedDate") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "IsGift") 标志：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("IsGift") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "Memo") 备注：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false,value:'" + datas.GetValue("Memo") + "'" })</td>
                </tr>
                <tr>
                    <th>起始行：</th>
                    <td>@Html.TextBoxFor(o => o.MinRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>终止行：</th>
                    <td>@Html.TextBoxFor(o => o.MaxRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    @*<th>新建关联记录：</th>
                    <td>@Html.CheckBoxFor(o => o.RefCreate)</td>*@
                </tr>
            </table>
        </fieldset>
    }
</div>

<script type="text/javascript">
    function Refresh(json) {
        dispErr(json.message, json.descript);
        if (json.data) {
            var $dg = pharos.easyui.dialog.curJquery("formDiv")("#grid2");
            $.each(json.data, function (idx, row) {
                $dg.datagrid('insertRow',
                {
                    index: idx,
                    row: {
                        ProductCode: row.ProductCode, Barcode: row.Barcode, Title: row.ProductTitle, SubUnit: row.Unit, Memo: row.Memo, BuyPrice: row.BuyPrice, BuyPrice2: row.BuyPrice,
                        SysPrice: row.SysPrice, InboundNumber: row.InboundNumber, Subtotal: row.InboundNumber * row.SysPrice, Id: guidGenerator(), IsGift: row.IsGift, ProducedDate: row.ProducedDate
                    }
                });
            });
        }
    }
</script>