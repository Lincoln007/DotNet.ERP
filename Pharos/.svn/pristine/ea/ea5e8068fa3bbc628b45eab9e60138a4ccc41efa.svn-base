<Window xmlns:Pay="clr-namespace:Pharos.POS.Retailing.ChildWin.Pay"  x:Class="Pharos.POS.Retailing.ChildWin.Pay.ChoosePayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" ShowInTaskbar="False" ShowActivated="True" WindowStyle="None" BorderThickness="0"  WindowStartupLocation="Manual" Margin="0"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" BorderBrush="Transparent"        AllowsTransparency="True" 
        Title="ChoosePayWindow" Height="530" Width="984">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="180"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="18" VerticalAlignment="Center" Foreground="#404040" HorizontalAlignment="Right" Text="支付金额："></TextBlock>
            <control:IconTextBox Name="txtAmount" Grid.Column="1" TabIndex="0" Text="{Binding Amount}" Height="50" Width="160" FontSize="18"  VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" ></control:IconTextBox>
            <TextBlock x:Name="txtChoosePay" FontSize="18" Grid.Column="2" VerticalAlignment="Center" Foreground="#404040" HorizontalAlignment="Left" Text="尚未选择支付方式"></TextBlock>
            <control:PosButton Grid.Column="3"  TabIndex="1"  HorizontalAlignment="Right"  Content="确定" FontSize="18" Foreground="White" Background="#659D15" Width="160" Height="50" Click="PosOkButton_Click"></control:PosButton>
            <control:PosButton Grid.Column="4"   TabIndex="2" HorizontalAlignment="Left"  Content="取消" FontSize="18" Foreground="White" Background="#807C7B" Width="160" Height="50" Click="PosCancelButton_Click"></control:PosButton>

        </Grid>
        <Pay:ChoosePay Focusable="False" x:Name="itemsPay" BorderThickness="0,1,0,0" BorderBrush="Gray" Grid.Row="1" />
    </Grid>
</Window>
