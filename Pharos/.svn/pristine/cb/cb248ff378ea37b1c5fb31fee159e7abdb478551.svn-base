using System;
using System.Windows;
using System.Windows.Data;
using Pharos.POS.Retailing.Models;

namespace Pharos.POS.Retailing
{
    public class LockConverter : IValueConverter
    {

        public object Convert(object value, Type targetType, object parameter, System.Globalization.CultureInfo culture)
        {
            var status = ((PosStatus)value);
            if (status != PosStatus.UserLock && status != PosStatus.NotLogin)
            {
                return Visibility.Hidden;
            }
            return Visibility.Visible;
        }

        public object ConvertBack(object value, Type targetType, object parameter, System.Globalization.CultureInfo culture)
        {
            return ((Visibility)value) == Visibility.Hidden ? 0 : 1;
        }
    }
}
