<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.ZhengDanZheKou"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="整单优惠" Height="450" Width="500" WindowStartupLocation="CenterScreen" Icon="..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ZhengDanZheKouStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource titleStyle}" Text="应收金额："></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource titleStyle}" HorizontalAlignment="Left" Text="{Binding Amount,Mode=TwoWay,StringFormat='{}{0:N2}'}"></TextBlock>
        <TextBlock Grid.Row="1" Style="{StaticResource titleStyle}" Text="折扣（0-10）："></TextBlock>
        <control:IconTextBox Grid.Row="1" TabIndex="0" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Discount,Mode=TwoWay,StringFormat='{}{0:N2}'}"></control:IconTextBox>
        <TextBlock Grid.Row="2" Style="{StaticResource titleStyle}" Text="折后金额："></TextBlock>
        <control:IconTextBox Grid.Row="2"  TabIndex="1" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Price,Mode=TwoWay,StringFormat='{}{0:N2}'}"></control:IconTextBox>
        <TextBlock Grid.Row="3" Style="{StaticResource titleStyle}" Text="授权密码："></TextBlock>
        <control:IconPasswordBox Grid.Row="3"  TabIndex="2" Grid.Column="1" Password="{Binding Password,Mode=TwoWay}" Style="{StaticResource IconPasswordBoxStyle}"></control:IconPasswordBox>

        <control:PosButton  Grid.Row="4" Grid.ColumnSpan="2" TabIndex="3"   Style="{StaticResource BtnSearchStyle}" Content="确定，并支付" Command="{Binding ConfirmCommand}"></control:PosButton>
    </Grid>
</control:DialogWindow02>

