using Pharos.POS.Retailing.ChildPages;
using System;
using System.Text.RegularExpressions;
using System.Windows.Controls;

namespace Pharos.POS.Retailing.Models.DataRules
{
    public class OrderIdRules : ValidationRule
    {
        public OrderIdRules()
        {
            ErrorInfo = "票据单号输入错误，只能存在字母、数字及“-”、“_”符号，长度不大于30字符！";
        }
        public string ErrorInfo { get; set; }
        public override ValidationResult Validate(object value, System.Globalization.CultureInfo cultureInfo)
        {
            var result = new ValidationResult(true, string.Empty);
            if (!string.IsNullOrEmpty(value.ToString()))
            {
                try
                {
                    if (!Regex.IsMatch(value.ToString(), @"^[a-zA-Z0-9,\-_]{0,30}$"))
                    {
                        result = new ValidationResult(false, ErrorInfo);
                    }
                }
                catch (Exception e)
                {
                    result = new ValidationResult(false, e.Message);
                }
            }
            if (!result.IsValid)
            {
                Toast.DoShow(result.ErrorContent.ToString());
            }
            return result;
        }
    }
}
