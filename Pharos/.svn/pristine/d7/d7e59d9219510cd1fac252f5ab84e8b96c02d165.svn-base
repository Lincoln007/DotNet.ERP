<control:LoginWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Pharos.POS.Retailing.Login" WindowStartupLocation="CenterScreen"
        Title="{Binding Title}" Icon="{Binding LogoIcon}" Height="400" Width="700" SnapsToDevicePixels="True" WindowStyle="None" AllowsTransparency="True" SettingsCommand="{Binding SettingsCommand}" >
    <control:LoginWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\LoginStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </control:LoginWindow.Resources>
    <control:LoginWindow.Background>
        <ImageBrush ImageSource="{Binding BackgroundImage}"/>
    </control:LoginWindow.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Border Width="200" BorderBrush="Transparent" BorderThickness="1" Background="Transparent" SnapsToDevicePixels="True" CornerRadius="3">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="1" />
                </Border.Effect>
                <control:IconTextBox Text="{Binding Account}" Style="{StaticResource IconTextBoxStyle}" Icon="Images\Login\user.png"/>
            </Border>
            <Border Width="200" BorderBrush="Transparent" BorderThickness="1" Background="Transparent" SnapsToDevicePixels="True" CornerRadius="3">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="1" />
                </Border.Effect>
            <control:IconPasswordBox Password="{Binding Password,Mode=TwoWay}" Style="{StaticResource IconPasswordBoxStyle}" Icon="Images\Login\lock.png"/>
            </Border>
            <Border Width="200" BorderBrush="Transparent" BorderThickness="1" Background="Transparent" SnapsToDevicePixels="True" CornerRadius="3">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="1" />
                </Border.Effect>
                <control:PosButton Background="#20A393" Foreground="White" FontSize="16" Width="200" Height="40" Content="登录" Command="{Binding LoginCommand}"/>
            </Border>
        </StackPanel>

        <StackPanel  Grid.Row="2"  Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Foreground="#ffffff" FontSize="12" Margin="5" Text="{Binding AppName}" />
        </StackPanel>
    </Grid>
</control:LoginWindow>
