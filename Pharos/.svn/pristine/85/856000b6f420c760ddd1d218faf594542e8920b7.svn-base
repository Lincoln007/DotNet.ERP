        /// <summary>
        /// Qct支付接口调用（第三方随心付SxfPay）
        /// </summary>
        /// <param name="reqPms">请求参数</param>
        /// <returns></returns>
        [HttpPost]
        public object QctPay([FromBody]JObject reqPms)
        {
            var result = QctPayReturn.Fail(msg: "参数格式错误");
            String rstStrSxf = String.Empty;
            var sign = String.Empty;
            try
            {
                String method = reqPms.Property("method", true);
                {
                    //var methodFirst = method.Substring(0, method.LastIndexOf("."));
                    switch (method)
                    {
                        case PayConst.QCTTRADE_PAY_BUYERSCAN_DYNA: //主扫支付动态（买家扫码支付动态二维码）
                            #region 主扫支付动态
                            //验证参数格式，判断商户权限（1、支付许可权限；2、商家支付通道权限；3、商家接口调用权限；）
                            var reqObj = reqPms.ToObject<PayBuyerScanDynaRequest>();
                            var checkObjZS = CheckAccessAndValidate<PayBuyerScanDynaRequest>(reqObj,(short)PayOperateType.Receipt);
                            if (checkObjZS.Successed == false)
                                return checkObjZS;
                            else
                            {
                                var merchObj = (TradersChannelModel)checkObjZS.Data;
                                //创建主扫支付动态支付订单
                                var order = PayTradeSvc.CreateBuyerScanDynaOrder(reqObj, merchObj);
                                if (order == null)
                                    return QctPayReturn.Fail(msg: "订单号或商户门店信息错误");
                                else
                                {
                                    //构建Sxf请求参数，签名，发起请求
                                    var sxfBuildReq = new SxfBuildPayTokenRequest(order, PayConfig.SxfNotifyUrl);
                                    rstStrSxf = SendPost(PayConfig.SxfPayUrl, ToDicAndSign(sxfBuildReq, merchObj.SecretKey3, "signature"));
                                    var rstObjSxf = JsonConvert.DeserializeObject<SxfBuildPayTokenResponse>(rstStrSxf);
                                    if (rstObjSxf.IsSuccess())
                                    {
                                        //处理返回成功结果，将返回结果进行Qct签名并返回给商户，fishtodo:暂忽略验证Sxf返回的响应结果签名
                                        var resultObj = new PayBuyerScanDynaResponse(order, rstObjSxf);
                                        return ToDicAndSign(resultObj, merchObj.SecretKey, "sign");
                                    }
                                    else
                                    {
                                        //处理返回失败结果
                                        LogEngine.WriteError(string.Format("[QctPay主扫动态预订单请求返回错误，订单号：{0}，返回参数：{1}]", sxfBuildReq.OutTradeNo, rstStrSxf), null, LogModule.支付交易);
                                        result = QctPayReturn.Fail(rstObjSxf.ReturnCode, rstObjSxf.ReturnMsg);
                                        return result;
                                    }
                                }
                            }
                            #endregion
                            break;
                        case PayConst.QCTTRADE_PAY_MERCHSCAN://被扫支付（商家扫码支付）
                            #region 被扫支付
                            //验证参数格式，判断商户权限（1、支付许可权限；2、商家支付通道权限；3、商家接口调用权限；）
                            var merchScanReq = reqPms.ToObject<PayMerchScanRequest>();
                            var checkObjBS = CheckAccessAndValidate<PayMerchScanRequest>(merchScanReq, (short)PayOperateType.Receipt);
                            if (checkObjBS.Successed == false)
                                return checkObjBS;
                            else
                            {
                                var merchObj = (TradersChannelModel)checkObjBS.Data;
                                //创建被扫支付订单
                                var merchScanOrder = PayTradeSvc.CreateBuyerScanDynaOrder(merchScanReq, merchObj);
                                if (merchScanOrder == null)
                                    return QctPayReturn.Fail(msg: "订单号或商户门店信息错误");
                                else
                                {
                                    //构建Sxf请求参数，签名，发起请求
                                    var sxfScanPayReq = new SxfScanPayRequest(merchScanOrder, PayConfig.SxfNotifyUrl);
                                    rstStrSxf = SendPost(PayConfig.SxfPayUrl, ToDicAndSign(sxfScanPayReq, merchObj.SecretKey3, "signature"));
                                    var rstObjSxf = JsonConvert.DeserializeObject<SxfScanPayResponse>(rstStrSxf);
                                    if (rstObjSxf.IsSuccess())
                                    {
                                        //处理返回成功结果，保存被扫支付结果，后进行Qct签名并返回结果回发给商户，fishtodo:暂忽略验证Sxf返回的响应结果签名
                                        PayTradeSvc.SaveMerchScanResult(rstObjSxf, out merchScanOrder);
                                        var merchScanRsp = new PayMerchScanResponse(merchScanOrder, rstObjSxf);
                                        return ToDicAndSign(merchScanRsp, merchObj.SecretKey, "sign");
                                    }
                                    else
                                    {
                                        //处理返回错误结果
                                        LogEngine.WriteError(string.Format("[QctPay被扫支付请求返回错误，订单号：{0}，返回参数：{1}]", sxfScanPayReq.OutTradeNo, rstStrSxf), null, LogModule.支付交易);
                                        result = QctPayReturn.Fail(rstObjSxf.ReturnCode, rstObjSxf.ReturnMsg);
                                        return result;
                                    }
                                }
                            }
                            #endregion
                            break;
                        case PayConst.QCTTRADE_REFUNDAPPLY://退款申请
                            #region 退款申请
                            //验证参数格式，判断商户权限（1、支付许可权限；2、商家支付通道权限；3、商家接口调用权限；）
                            var rfdReq = reqPms.ToObject<RefundApplyRequest>();
                            var checkObjTK = CheckAccessAndValidate<RefundApplyRequest>(rfdReq, (short)PayOperateType.Refund);
                            if (checkObjTK.Successed == false)
                                return checkObjTK;
                            else
                            {
                                var merchObj = (TradersChannelModel)checkObjTK.Data;
                                //创建支付订单
                                var rfdOrder = PayTradeSvc.CreateRefundApplyOrder(rfdReq, merchObj);
                                if (rfdOrder == null)
                                    return QctPayReturn.Fail(msg: "退款单号或商户门店信息错误");
                                else
                                {
                                    //构建Sxf请求参数，签名，发起请求
                                    var sxfRfdReq = new SxfRefundApplyRequest(rfdOrder, PayConfig.SxfNotifyUrl);
                                    var sxfRfdReqDic = ToDicAndSign(sxfRfdReq, merchObj.SecretKey3, "signature");
                                    rstStrSxf = SendPost(PayConfig.SxfPayUrl, sxfRfdReqDic);
                                    var rstObjSxf = JsonConvert.DeserializeObject<SxfRefundApplyResponse>(rstStrSxf);
                                    if (rstObjSxf.IsSuccess())
                                    {
                                        //处理返回成功结果，后将返回结果回发给商户，fishtodo:暂忽略验证Sxf返回的响应结果签名
                                        var rfdApplyRsp = new RefundApplyResponse(rfdOrder, rstObjSxf)
                                        {
                                            OldOutTradeNo = sxfRfdReq.OldOutTradeNo
                                        };
                                        return ToDicAndSign(rfdApplyRsp, merchObj.SecretKey, "sign");
                                    }
                                    else
                                    {
                                        //处理返回错误结果
                                        LogEngine.WriteError(string.Format("[QctPay退款申请请求返回错误，订单号：{0}，返回参数：{1}]", sxfRfdReq.OutTradeNo, rstStrSxf), null, LogModule.支付交易);
                                        result = QctPayReturn.Fail(rstObjSxf.ReturnCode, rstObjSxf.ReturnMsg);
                                        return result;
                                    }
                                }
                            }
                            #endregion
                            break;
                        default:
                            return QctPayReturn.Fail(msg: "[method]参数错误");
                            break;
                    }
                }

            }
            catch (Exception ex)
            {
                LogEngine.WriteError("[QctPay参数Json解析失败]" + ex.Message, ex, LogModule.支付交易);
                result = QctPayReturn.Fail(msg: "参数格式错误");
                return result;
            }
        }
