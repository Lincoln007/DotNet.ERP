<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.ZhiFuFangShi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="支付方式选择" Height="550" Width="795" WindowStartupLocation="CenterScreen" Icon="..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ZhiFuFangShiStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="应付金额："></TextBlock>
            <TextBlock Grid.Column="1" Foreground="#598514" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"><Run>￥</Run><Run Text="{Binding Amount,StringFormat='{}{0:N2}'}"></Run></TextBlock>
            <TextBlock Grid.Column="2" Style="{StaticResource titleStyle}" Text="导购员："></TextBlock>
            <control:IconTextBox Grid.Column="3" Style="{StaticResource contentStyle}" Text="{Binding SaleMan,UpdateSourceTrigger=LostFocus}"></control:IconTextBox>

        </Grid>
        <ItemsControl BorderThickness="0,1" BorderBrush="Gray" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Payways}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <ScrollViewer Padding="10">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <control:PosButton Command="{Binding DoPayCommand}" BorderThickness="1" BorderBrush="Gray" Height="80" Width="225" Margin="5" Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="125"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Rectangle  x:Name="moveRectangle" Fill="Transparent"
                                           Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" Cursor="Hand"/>
                                <Image Margin="5" Width="80" Source="{Binding Icon}"></Image>
                                <TextBlock Grid.Column="1" TextWrapping="Wrap"  FontSize="25" VerticalAlignment="Center"  Text="{Binding Title}"></TextBlock>
                            </Grid>
                        </Button.Content>
                    </control:PosButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <control:PosButton Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Right"  Content="多方式付款" Style="{StaticResource BtnStyle}" Command="{Binding MultiPayCommand}"></control:PosButton>
        <control:PosButton Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"  Content="关闭" Background="#659D15" Style="{StaticResource BtnStyle}" Command="{Binding CloseCommand}"></control:PosButton>
    </Grid>
</control:DialogWindow02>