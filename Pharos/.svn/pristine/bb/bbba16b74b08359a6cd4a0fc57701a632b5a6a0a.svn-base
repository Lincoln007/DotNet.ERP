using Pharos.Logic.ApiData.Pos.ValueObject;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Sale
{
    /// <summary>
    /// 购物车工厂
    /// </summary>
    public class ShoppingCartFactory
    {
        static Dictionary<string, ShoppingCart> shoppingCartCache = new Dictionary<string, ShoppingCart>();
        public static ShoppingCart Factory(string storeId, string machineId)
        {
            string key = string.Format("{0}*-*{1}", storeId, machineId);
            if (shoppingCartCache.ContainsKey(key))
            {
                var shoppingCart = shoppingCartCache[key];
                if (shoppingCart == null)
                {
                    shoppingCart = new ShoppingCart();
                    shoppingCart.MachineInformation = new MachineInformation()
                    {
                        StoreId = storeId,
                        MachineSn = machineId,
                        MarketingManager = new Marketings.MarketingManager(storeId)
                    };
                    shoppingCartCache[key] = shoppingCart;
                }
                return shoppingCart;
            }
            else
            {
                var shoppingCart = new ShoppingCart();
                shoppingCart.MachineInformation = new MachineInformation()
                {
                    StoreId = storeId,
                    MachineSn = machineId,
                    MarketingManager = new Marketings.MarketingManager(storeId)
                };
                shoppingCartCache.Add(key, shoppingCart);
                return shoppingCart;
            }
        }
    }
}
