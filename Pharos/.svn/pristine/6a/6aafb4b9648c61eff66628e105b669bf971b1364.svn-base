@model Pharos.Sys.Entity.OMS_SysUserInfo
@{
    ViewBag.Title = "UserInfo";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    var storeRoles = ViewBag.StoreRoles as List<SelectListItem>;
}

<div class="default-form">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(o => o.Id)
        <div class="content">
            <table class="table-toolbar" style="width:100%;height:160px;">
                <tr>
                    <td class="name">
                        <span>员工姓名：</span>
                    </td>
                    <td class="input width-168">
                        <label>@Model.FullName</label>
                    </td>
                    <td class="name">
                        <span>员工编号：</span>
                    </td>
                    <td class="input width-168">
                        <label>@Model.UserCode</label>
                    </td>
                </tr>
                <tr>
                    <td class="name">
                        <span>登录帐号：</span>
                    </td>
                    <td class="input width-168">
                            <label>@Model.LoginName</label>
                    </td>

                    <td class="name">
                        <span>登录密码：</span>
                    </td>
                    <td class="input width-168">
                        @Html.TextBoxFor(o => o.LoginPwd, new { type = "password", @class = "easyui-textbox", data_options = "novalidate:true", @Value = "" })
                    </td>
                </tr>
                <tr>
                    <td class="name">
                        <span>性别：</span>
                    </td>
                    <td class="input">
                        <label>@(Model.Sex ? "男" : "女")</label>
                    </td>
                    <td class="name">
                        <span>在职状态：</span>
                    </td>
                    <td class="input">
                        <label>@(Model.Status==1?"正常":Model.Status==2?"锁定":"注销")</label>
                    </td>
                </tr>
                
            </table>
        </div>
    }
</div>

<script type="text/javascript">
    function SaveBefore() {
        var $pwd = $("#LoginPwd");
        var $id = $("#Id");
        if ($id.val() == 0) {
            if ($pwd.val() == "" || $pwd.val().length < 4) {
                $.messager.alert('提示', '密码长度至少为4位。');
                return false;
            }
        } else {
            if ($pwd.val().length > 1 && $pwd.val().length < 4) {
                $.messager.alert('提示', '新密码长度至少为4位。');
                return false;
            }
        }
        return true;
    }
</script>
