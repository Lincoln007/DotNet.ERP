using Pharos.MessageAgent.Data;
using Pharos.MessageAgent.Data.V1;
using Pharos.MessageAgent.Protocol;
using Pharos.SuperSocketProtocol;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.MessageAgent.Commands.V1
{
    public class PubishCommand : CommandBase
    {
        public PubishCommand() : base(0x01, 0x00, 0x00, 0x02) { }

        public override void Execute(SocketServer server, SocketSession session, SockectRequestMessage requestInfo)
        {
            try
            {
                PubishInformaction info;
                if (requestInfo.TryReadFromJsonStream(out info))
                {
                    var msgServer = (MessageServer)server;
                    msgServer.MessageQueue.Pubish(info);
                }
            }
            catch (Exception ex)
            {
                var msg = Message.ExceptionMessage(string.Format("推送失败，请查看推送信息是否完整！异常消息：{0}", ex.Message));
                session.SendObjectToJsonStream(RouteCode, msg);
            }
        }
    }
}
