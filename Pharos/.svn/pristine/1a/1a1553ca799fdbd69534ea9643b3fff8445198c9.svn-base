@model Pharos.Logic.OMS.Entity.Business
@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";    
}

<div class="default-form">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(o=>o.Id)
        @Html.HiddenFor(o=>o.ById)
        <div class="content">
            <table class="table-form" width="100%" height="130px">
                <tr>
                    <td class="name">所属行业：</td>
                    <td class="input">@Html.DropDownListFor(o => o.ParentId,ViewBag.parents as List<SelectListItem>, new { @class = "easyui-combobox", data_options = "" })</td>
                </tr>
                <tr>
                    <td class="name">行业名称：</td>
                    <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:true,onChange:titleChange" })</td>
                </tr>
                <tr>
                    <td class="name">行业别名：</td>
                    <td class="input">@Html.TextBoxFor(o => o.Byname, new { @class = "easyui-textbox", data_options = "required:true" })</td>
                </tr>
            </table>
        </div>
    }
</div>



<script type="text/javascript">
    function titleChange(nv, ov) {
        var byname= $("#Byname").textbox("getValue")
        if (!byname) {
            $("#Byname").textbox("setValue", nv);
        }
    }
    function Refresh() {
        if ($("#hidadd").val() == "1") {
            pharos.easyui.dialog.curJquery("formDiv")("#treegrid").treegrid("reload").treegrid("clearSelections").treegrid("clearChecked");
            var src = window.top.$('.formDiv:last iframe').attr("src");
            window.location.href = src;
        } else {
            pharos.easyui.dialog.curJquery("formDiv")("#treegrid").treegrid("reload").treegrid("clearSelections").treegrid("clearChecked");
            pharos.easyui.dialog.topClose("formDiv");
        }
    }
</script>