@using QCT.Pay.Common
@model Pharos.Logic.OMS.Entity.PayChannelManageExt
@{
    ViewBag.Title = "新增收单渠道";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    var disabled = Model.State == 0 ? "data-notdisabled" : "disabled";
}
<link href="~/Content/iconfont/iconfont.css" rel="stylesheet" />

<style type="text/css">
    .name {
        width: 120px;
    }

    .table-form td {
    }

    .notes {
        font-size: 12px;
        color: red;
    }
</style>
<div class="default-form">
    @using (Html.BeginForm("SavePayChannel", "Finance", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o => o.Id)
        @Html.HiddenFor(o => o.State)
        <div class="content">
            <table class="table-form" style="width:420px;">
                @if (Model.Id > 0)
                {
                    <tr>
                        <td class="name">渠道编号：</td>
                        <td class="input">@Model.ChannelNo</td>
                        <td class="name">状态：</td>
                        <td class="input">@EnumHelper.GetDescription((PayChannelState)Model.State)</td>
                    </tr>

                    <tr>
                        <td class="name">审核信息：</td>
                        <td class="input" colspan="3">
                            @if (Model.AuditUID != null)
                            {
                                @Html.Raw(Model.Auditer + "审核于" + Model.AuditDT.ToString("yyyy-MM-dd"))
                            }
                            else
                            {
                                @Html.Raw("--")
                            }
                        </td>
                    </tr>

                }

                <tr>
                    <td class="name">收单渠道：</td>
                    <td class="input" colspan="3">
                        @Html.TextBoxFor(o => o.ChannelCode, new Dictionary<string, object>() { { "class", "easyui-textbox" }, { disabled, "disabled" }, { "data-options", "novalidate:true,required:true,prompt:'2-30个字符',validType: 'length[2,30]',width:200" } })
                    </td>
                </tr>
                <tr>
                    <td class="name">渠道全称：</td>
                    <td class="input" colspan="3">@Html.TextBoxFor(o => o.ChannelTitle, new Dictionary<string, object>() { { "class", "easyui-textbox" }, { "data-options", "novalidate:true,required:true,prompt:'2-30个字符',validType: 'length[2,30]',width:200" } })</td>
                </tr>
                <tr>
                    <td class="name">第三方平台号：</td>
                    <td class="input" colspan="3">@Html.TextBoxFor(o => o.PlatformNum, new Dictionary<string, object>() { { "class", "easyui-textbox" }, { "data-options", "novalidate:true,required:false,width:200" } })</td>
                </tr>
                <tr>
                    <td class="name">默认渠道：</td>
                    <td class="input" colspan="3">
                        <table cellpadding="0" cellspacing="3">
                            <tbody>
                                <tr>
                                    <td style="padding:0px 3px;">
                                        <input type="radio" id="IsDefault_1" name="IsDefault" value="0" checked="checked" style="vertical-align:middle"><label for="IsDefault_1" style="vertical-align:middle;padding-left:3px;">否</label>
                                    </td>
                                    <td style="padding:0px 3px;">
                                        <input type="radio" id="IsDefault_2" name="IsDefault" value="1" style="vertical-align:middle"><label for="IsDefault_2" style="vertical-align:middle;padding-left:3px;">是</label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                @*<tr>
                        <td class="name">状态：</td>
                        <td class="input" data-options="width:160,editable:true,required:true" colspan="3">
                            @Html.RadioButtonListFor(o => o.State, ViewBag.StateList as List<SelectListItem>)
                        </td>
                    </tr>*@

                <tr>
                    <td class="name">备注：</td>
                    <td class="input" colspan="3">
                        @Html.TextArea("Memo", new { @class = "easyui-validatebox", style = "width:300px; height: 60px; max-width: 300px; max-height: 60px; resize: none; ", data_options = "novalidate:false,required:false,prompt:'限200个字符',validType: 'length[0,200]'" })
                        <div>限长200个字</div>
                    </td>
                </tr>
            </table>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {

    });
</script>
