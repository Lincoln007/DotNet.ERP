@model Pharos.Sys.Entity.SysWebSetting
<div class="header">
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td><img src="@((Model != null && !Model.TopLogo.IsNullOrEmpty()) ? Url.Content("~/SysImg/") + SysCommonRules.CompanyId + "/" + Model.TopLogo : Url.Content("~/SysImg/logo.png"))" height="70px" border="0" /></td>
        <td align="right"><a href="javascript:;" onclick="viewUserInfo();">@ViewBag.CurUserName（@ViewBag.CurLoginName）</a> <i>|</i> <a href="@Url.Action("Logout", "Home")" style="">[退出]</a></td>
    </tr>
    </table>
</div>

<script type="text/javascript">
    function viewUserInfo() {
        openWin({ 'title': '用户基本信息', 'width': 500, 'height': 350, 'url': '@Url.Action("UserInfo", "Account")?isdetail=1' });
    }
</script>