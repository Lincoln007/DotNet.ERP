        private SortedDictionary<string, object> GetSxfBaseRequestParams(TradeOrder trade)
        {
            var sortDic = new SortedDictionary<string, object>();
            //fishtodo:charSet signType 修改为实际请求时的类型
            sortDic.Add("charSet", PayConst.SXFDEFAULTCHARSET);
            sortDic.Add("merchantId", trade.MchId3);
            sortDic.Add("shopId", trade.StoreId3);
            sortDic.Add("terminalId", trade.DeviceId3);
            sortDic.Add("signType", PayConst.SXFDEFAULTSIGNTYPE);
            sortDic.Add("version", "1.0");
            return sortDic;
        }

