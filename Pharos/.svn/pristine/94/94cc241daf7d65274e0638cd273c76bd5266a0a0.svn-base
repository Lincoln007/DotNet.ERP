<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.XianJinZhiFu"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="现金支付" Height="400" Width="500" WindowStartupLocation="CenterScreen" Icon="..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\XianJinZhiFuStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition  Height="80"></RowDefinition>
            <RowDefinition  Height="80"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="应付金额：" Style="{StaticResource titleStyle}"></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"><Run Text="￥"></Run><Run Text="{Binding Amount,StringFormat='{}{0:N2}'}"></Run></TextBlock>

        <TextBlock Grid.Row="1" Text="现金收款：" Style="{StaticResource titleStyle}"></TextBlock>
        <control:IconTextBox Name="txtshoukuan" Grid.Row="1" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Cash,StringFormat='{}{0:N2}'}"></control:IconTextBox>

        <TextBlock Grid.Row="2" Text="找零：" Style="{StaticResource titleStyle}"></TextBlock>
        <control:IconTextBox Name="txtzhaoling" Grid.Row="2" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Change,StringFormat='{}{0:N2}'}"></control:IconTextBox>

        <control:PosButton Style="{StaticResource BtnSearchStyle}" Grid.Row="3" Grid.ColumnSpan="2" Content="完成支付" Command="{Binding ConfirmCommand}"></control:PosButton>
    </Grid>
</control:DialogWindow02>
