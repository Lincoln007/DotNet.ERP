@{
    ViewBag.Title = Pharos.Sys.SysConstPool.Page_Title;
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "新增", delText: "移除"));
}

@section search{
    <table class="table-toolbar">
        <tr>
            <td class="label-toolbar">
                <label>门店：</label>
            </td>
            <td class="input-toolbar">
                <input class="easyui-textbox datacontrol" />
            </td>
            <td class="label-toolbar">
                <label>状态：</label>
            </td>
            <td class="input-toolbar">
                <input class="easyui-textbox datacontrol" />
            </td>
        </tr>
    </table>
}
@section toolbar
{
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" >设为可用</a>
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-suspend'" >设为停用</a>
}
<script>

    pharos.manager.editurl = "@Url.Action("AliPaySettingSave")";

    pharos.manager.columns = [[
                { field: 'Id', checkbox: true, width: 30 },
                { field: 'Num', title: '适用门店', width: 150, align: 'center' },
                { field: 'BrandSN', title: '合作身份者ID', width: 150, align: 'center' },
                { field: 'ClassifyTitle', title: '使用当面付编码', width: 150, align: 'center' },
                { field: 'ClassifyTitle', title: '交易安全校验码', width: 150, align: 'center' },
                { field: 'JianPin', title: '支付通知页面', width: 150, align: 'center' },
                { field: 'Num', title: '状态', width: 150, align: 'center' },
                { field: 'StateTitle', title: '更新时间', width: 150, align: 'center' },
    ]];

    pharos.manager.addItem = function () {
        this.Id = "";
        openDialogNew(this.addText, this.editurlNocache(), 700, 300, false, true);
    }
    @*pharos.manager.editItem = function (Id) {
        this.Id = Id;
        openDialog600(this.editText, this.editurlNocache());
    }
    function setEnable(state) {
        var rows = pharos.manager.selectItems();
        if (!rows) return;
        var ids = $.map(rows, function (item) {
            return item.Id;
        }).join();
        $.post("@Url.Action("SetState")", { Ids: ids, t: Math.random(), state: state }, function (d) {
            if (d.successed) {
                $.messager.alert("提示", "修改成功！", "info");
                pharos.manager.gridReload();
            } else {
                $.messager.alert("提示", "修改失败！" + d.message, "error");
            }
        }, "json");
    }
    function removeBefore(item) {
        if (item.Num > 0) {
            $.messager.alert("提示", "商品量大于零不能删除!"); return false;
        }
        return true;
    }*@
</script>

