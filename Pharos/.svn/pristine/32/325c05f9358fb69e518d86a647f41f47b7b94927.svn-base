using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.Serialization;
using System.Text;

namespace Pharos.Sys.Entity
{
    /// <summary>
    /// 用于管理本系统的基本配置信息
    /// </summary>
    [Serializable]
    [DataContract(IsReference = true)]
    public class SysWebSetting
    {
        /// <summary>
        /// 记录ID
        /// [主键：√]
        /// [长度：10]
        /// [不允许为空]
        /// </summary>
        [DataMember]
        public int Id { get; set; }

        /// <summary>
        /// 顶部Logo
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string TopLogo { get; set; }

        /// <summary>
        /// 底部Logo
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string BottomLogo { get; set; }

        /// <summary>
        /// App640图标
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string AppIcon640 { get; set; }
        /// <summary>
        /// App960图标
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string AppIcon960 { get; set; }
        /// <summary>
        /// App首页背景图
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string AppCustomer { get; set; }

        /// <summary>
        /// 系统Icon
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string SysIcon { get; set; }

        /// <summary>
        /// 官网地址
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string WebsiteUrl { get; set; }

        /// <summary>
        /// 公司简称
        /// [长度：50]
        /// </summary>
        [DataMember]
        public string CompanyTitle { get; set; }

        /// <summary>
        /// 公司电话
        /// [长度：20]
        /// </summary>
        [DataMember]
        public string Tel { get; set; }

        /// <summary>
        /// 页面Title
        /// [长度：50]
        /// </summary>
        [DataMember]
        public string PageTitle { get; set; }

        /// <summary>
        /// SMTP发件箱服务器
        /// [长度：100]
        /// </summary>
        [DataMember]
        public string SMTPServer { get; set; }

        /// <summary>
        /// SMTP端口
        /// </summary>
        [DataMember]
        public int? SMTPPort { get; set; }

        /// <summary>
        /// SMTP显示名称
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string SMTPShowName { get; set; }

        /// <summary>
        /// SMTP SSL端口
        /// </summary>
        [DataMember]
        public int? SMTPSSLPort { get; set; }

        /// <summary>
        /// SMTP账号
        /// [长度：100]
        /// </summary>
        [DataMember]
        public string SMTPAccount { get; set; }

        /// <summary>
        /// SMTP密码
        /// [长度：50]
        /// </summary>
        [DataMember]
        public string SMTPPwd { get; set; }

        /// <summary>
        /// APP在环信上注册的对应应用URL
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string EMReqUrlBase { get; set; }

        /// <summary>
        /// APP在环信上注册的对应应用Id
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string EMAppId { get; set; }

        /// <summary>
        /// APP在环信上注册的对应应用Secret
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string EMAppSecret { get; set; }

        /// <summary>
        /// APP在环信上对应的appkey的org_name部分
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string EMAppOrg { get; set; }

        /// <summary>
        /// APP在环信上对应的appkey的app_name部分
        /// [长度：200]
        /// </summary>
        [DataMember]
        public string EMAppName { get; set; }

    }
}
