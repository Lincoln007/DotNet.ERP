using Pharos.Logic.ApiData.Pos.DAL;
using Pharos.Logic.ApiData.Pos.Entity.LocalCeEntity;
using Pharos.Logic.BLL;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Services.LocalCeServices
{
    public class ConsumptionPaymentService : BaseGeneralService<ConsumptionPayment, LocalCeDbContext>
    {
        public static void Save(string paySn, decimal amount, int apiCode, decimal change, decimal receive, string apiOrderSN = null, string cardNo = null, int token = 1)
        {
            CurrentRepository.Add(new ConsumptionPayment()
            {
                Amount = amount,
                ApiCode = apiCode,
                PaySN = paySn,
                State = 1,
                ApiOrderSN = apiOrderSN,
                CardNo = cardNo,
                CompanyId = token,
                IsUpload = false
            });
        }
    }
}
