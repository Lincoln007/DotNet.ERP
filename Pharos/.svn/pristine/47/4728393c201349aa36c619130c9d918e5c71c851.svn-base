
namespace Pharos.POS.Retailing.MultipScreen
{
    public interface IMultipScreen
    {
        /// <summary>
        /// 在窗体初始化显示的位置
        /// </summary>
        WindowStartupLocationInScreen InScreen { get;}
        /// <summary>
        /// 屏幕索引， 0为主屏，1+为次屏
        /// </summary>
        int Index { get;  }
        /// <summary>
        /// 当任何指定次屏没有找到时，如果该值为TRUE，则忽略这个页面的显示，否则将显示在主屏
        /// </summary>
        bool IngoreMinorScreenError { get;  }
    }
}
