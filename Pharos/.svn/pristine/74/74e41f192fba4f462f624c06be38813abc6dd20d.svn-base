<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
        xmlns:models ="clr-namespace:Pharos.POS.Retailing.Models.ApiReturnResults"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="titleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="contentStyle" TargetType="{x:Type control:IconTextBox}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="180"/>
    </Style>
    <Style TargetType="{x:Type control:PosButton}" x:Key="BtnStyle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Foreground" Value="#FEFDFF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="130"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Background" Value="#93C34D"/>
    </Style>
    <Style  TargetType="DataGridRow">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Foreground" Value="#2E2F31" />
        <Setter Property="MinHeight" Value="40"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFFDEE"/>
            </Trigger>

            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#FFF29D"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <DataTemplate x:Key="UserDayReportDataTemplate" DataType="{x:Type models:SalesmanDayReportResult}">
        <Border BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid d:IsLocked="True" MinHeight="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="16" VerticalAlignment="Center">
                <Run Foreground="#7D9EC0" Text="{Binding UserCode}"/>
                <Run Text=" "/>
                <Run Foreground="#7D9EC0" Text="{Binding Salesman}"/>
                <Run Text=" "/>
                <Run Text="(首笔时间:"/>
                <Run Text="{Binding StartTime,StringFormat='yyyy-MM-dd HH:mm:ss'}"/>
                <Run Text=" "/>
                <Run Text="末笔时间:"/>
                <Run Text="{Binding EndTime,StringFormat='yyyy-MM-dd HH:mm:ss'}"/>
                <Run Text=")  剩余现金：￥"/><Run Text="{Binding Cash,StringFormat='{}{0:N}'}"/>
                </TextBlock>
                <Grid  Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock  FontSize="16" HorizontalAlignment="Right" Grid.Column="0"  Text="{Binding Sale.SaleInfo.Project}"/>
                    <TextBlock  FontSize="16" Grid.Column="1" Text="：￥"/>
                    <TextBlock  FontSize="16" Grid.Column="2"  Text="{Binding Sale.SaleInfo.Amount,StringFormat='{}{0:N}'}"/>
                    <TextBlock  FontSize="16" Grid.Column="3"><Run Text="笔数："/><Run Text="{Binding Sale.SaleInfo.Number}"/></TextBlock>
                </Grid>

                <ItemsControl FontSize="14" ItemsSource="{Binding Path=Sale.PayWay,Mode=TwoWay}" Grid.Row="2" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock HorizontalAlignment="Right" Grid.Column="0"  Text="{Binding Title}"/>
                                <TextBlock Grid.Column="1" Text="：￥"/>
                                <TextBlock Grid.Column="2"  Text="{Binding Amount,StringFormat='{}{0:0.00###}'}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <ItemsControl FontSize="16" ItemsSource="{Binding Path=Other,Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock HorizontalAlignment="Right" Grid.Column="0"  Text="{Binding Project}"/>
                                <TextBlock Grid.Column="1" Text="：￥"/>
                                <TextBlock Grid.Column="2"  Text="{Binding Amount,StringFormat='{}{0:N}'}"/>
                                <TextBlock Grid.Column="3"><Run Text="笔数："/><Run Text="{Binding Number}"/></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>