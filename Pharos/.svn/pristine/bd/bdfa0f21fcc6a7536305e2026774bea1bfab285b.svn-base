<Window x:Class="Pharos.POS.Retailing.SettingPages.SetMachineInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Normal" WindowStyle="None"
        AllowsTransparency="True"  WindowStartupLocation="CenterScreen" Icon="..\Images\Setting.png"
        Background="Transparent" BorderBrush="Transparent"  FontFamily="/Pharos.POS.Retailing;component/Fonts/#Microsoft YaHei" 
        Name="mainWindow"
        Title="设备配置" Height="550" Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\BaseButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.8" Color="#80000000">
            </DropShadowEffect>
        </Grid.Effect>
        <Border BorderThickness="5"  CornerRadius="10"  Background="#F9F9F9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"  Width="{Binding ElementName=main, Path=Width,UpdateSourceTrigger=PropertyChanged}" 
                    BorderThickness="0,0,0,1" BorderBrush="#AFB3B7" MouseDown="Title_MouseLeftButtonDown">
                    <Grid Cursor="Hand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300*"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="5,5,0,0" Height="70" PreviewMouseLeftButtonDown="Title_MouseLeftButtonDown"  Background="#F9F9F9" Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal">
                            <Image Margin="15,0,10,0" Source="{Binding ElementName=mainWindow,Path= Icon}" Width="25" ></Image>
                            <TextBlock Text="{Binding ElementName=mainWindow,Path=Title}" FontSize="25" Foreground="#404040" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2"  VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock FontSize="45" FontWeight="Bold" TextAlignment="Center" FontFamily="/Pharos.POS.Retailing;component/Fonts/#Microsoft YaHei" Foreground="#A0A0A1" MouseDown="CloseImage_MouseDown" TextDecorations="{x:Null}">×</TextBlock>
                        </StackPanel>
                    </Grid>

                </Border>


                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">公 司 简 称：</TextBlock>
                                <TextBox IsEnabled="{Binding IsModify}" Width="350" VerticalContentAlignment="Center" FontSize="20" Text="{Binding CompanyName}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">Pos机编号 ：</TextBlock>
                                <TextBox  IsEnabled="{Binding IsModify}" Width="350" VerticalContentAlignment="Center" FontSize="20" Text="{Binding MachineId}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"> 门 店 标 识：</TextBlock>
                                <TextBox  IsEnabled="{Binding IsModify}" Width="350" VerticalContentAlignment="Center" FontSize="20" Text="{Binding StoreId}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">门 店 名 称：</TextBlock>
                                <TextBox  IsEnabled="{Binding IsModify}" Width="350" VerticalContentAlignment="Center" FontSize="20" Text="{Binding StoreName}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">门 店 电 话：</TextBlock>
                                <TextBox  IsEnabled="{Binding IsModify}" Width="350" VerticalContentAlignment="Center" FontSize="20" Text="{Binding StorePhone}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">服务器地址：</TextBlock>
                                <TextBox Width="350" VerticalContentAlignment="Center" FontSize="18" Text="{Binding ServerUrl}"></TextBox>
                            </StackPanel>
                            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <TextBlock Width="115" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center">设 备 编 号：</TextBlock>
                                <TextBlock Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Text="{Binding Mac}"></TextBlock>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button  Name="btnGudan" Grid.Column="0" Style="{StaticResource BtnBase}" Background="#659D15" FontSize="20" Foreground="#fff" Width="250" Height="50" Command="{Binding Path=Save}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">保存</Button>
                        </StackPanel>


                    </Grid>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>

