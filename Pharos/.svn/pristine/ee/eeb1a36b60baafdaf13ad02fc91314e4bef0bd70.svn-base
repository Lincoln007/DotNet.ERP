using SuperSocket.ClientEngine.Protocol;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.DataSynchronism.Protocol
{
    public class ClientCommandReader<TCommand> : ClientCommandReader
        where TCommand : ICommand
    {
        public TCommand GetCommandInfo(ICommandInfo route)
        {
            if (route == null)
                return default(TCommand);
            return (TCommand)cmdCollections.FirstOrDefault(o => o.Name == route.Key);
        }

        public ClientCommandReader<TCommand> NextCommandReader
        {
            get { return new ClientCommandReader<TCommand>(); }
        }


    }

    public class ClientCommandReader
    {
        protected static List<ICommand> cmdCollections = new List<ICommand>();
        public static void Register(ICommand command)
        {
            cmdCollections.RemoveAll(o => o.Name == command.Name);
            cmdCollections.Add(command);
        }

        public static void Clear()
        {
            cmdCollections.Clear();
        }
    }
}
