    /// <summary>
    /// ZhiFuWanCheng.xaml 的交互逻辑
    /// </summary>
    public partial class ZhiFuWanCheng : DialogWindow02
    {
        public ZhiFuWanCheng(decimal _amount, decimal receipt, decimal change, string payWays, PayAction payAction)
        {
            InitializeComponent();
            this.InitDefualtSettings();
            Task.Factory.StartNew(() =>
            {
                var model = new PayComplete(_amount, receipt, change, payWays, payAction);
                this.Dispatcher.Invoke(new Action(() =>
                {
                    this.ApplyBindings(this, model);
                }));
            });
        }
    }
}
