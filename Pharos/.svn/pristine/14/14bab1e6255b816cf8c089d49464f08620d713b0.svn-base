@model Pharos.Logic.Entity.MemberLevel
    @{
        ViewBag.Title = "CreateMemberGrade";
        Layout = "~/Views/Shared/_FormLayout.cshtml";
    }

    <div class="default-form">
        @using (Html.BeginForm())
        {
            <div class="content">
                <table class="table-form" width="100%">
                    <tr>
                        <td class="name">名称：</td>
                        <td class="input"><input type="text" name="LevelTitle" class="easyui-textbox" /></td>
                    </tr>
                    <tr>
                        <td class="name">优惠方式：</td>
                        <td class="input"><select name="CouponType" class="easyui-combobox"><option>无</option><option>方案折扣</option><option>固定折扣</option></select></td>
                    </tr>
                    <tr>
                        <td class="name">积分方式：</td>
                        <td class="input"><select name="IntegerType" class="easyui-combobox"><option>无</option><option>方案积分</option></select></td>
                    </tr>
                    <tr>
                        <td class="name">折扣：</td>
                        <td class="input"><input name="Discount" type="text" class="easyui-validatebox" /></td>
                    </tr>
                    <tr>
                        <td class="name">升级分值：</td>
                        <td class="input"><input name="UpgradeScore" type="text" class="easyui-validatebox" /></td>
                    </tr>
                    <tr>
                        <td class="name">等级说明：</td>
                        <td class="input"><textarea name="Memo" style="width:150px;height:60px;" class="easyui-validatebox"></textarea></td>
                    </tr>
                    <tr>
                        <td class="name">自动升级：</td>
                        <td class="input"><input type="checkbox" class="label-input" name="MasterState" value="1" @(Model.AutoUpdate == true ? "checked='checked'" : "") /><label>自动升级</label></td>
                    </tr>
                </table>
            </div>
        }
    </div>