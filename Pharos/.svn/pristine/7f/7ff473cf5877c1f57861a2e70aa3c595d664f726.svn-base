using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Windows;
using System.Windows.Threading;

namespace Pharos.POS.Retailing.Printers.Domain.Models
{
    public class AsyncPrintTask
    {
        public static void Exec(bool highPriority, Action action)
        {
            if (highPriority)
            {
                InternalExec(action);
            }
            else
            {
                Application.Current.Dispatcher.BeginInvoke(DispatcherPriority.ApplicationIdle,
                   new Action(() => InternalExec(action)));
            }
        }

        private static void InternalExec(Action action)
        {
            try
            {
                action.Invoke();
            }
            catch (Exception e)
            {
            }
        }
    }
}
