@model OMS_CompanyAuthorize
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<div class="default-form">
    @using(Html.BeginForm())
    {
        @Html.HiddenFor(o=>o.Id)
        <div class="content">
        <table class="table-form" width="100%" height="280px">
            <tr>
                <td class="name">编 号：</td>
                <td class="input">@Html.TextBoxFor(o => o.Code, new { @class = "easyui-textbox", data_options = "required:true"+(Request["id"]!=null?",readonly:true":"") })</td>
                <td class="name">类 别：</td>
                <td class="input">@Html.RadioButtonListFor(o => o.Category, new List<SelectListItem>() { new SelectListItem() { Text = "在线", Value = "1" }, new SelectListItem() { Text = "独立", Value = "2" } })</td>
            </tr>
            <tr>
                <td class="name">单位简称：</td>
                <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:true" })</td>
                <td class="name">单位全称：</td>
                <td class="input">@Html.TextBoxFor(o => o.FullTitle, new { @class = "easyui-textbox", data_options = "required:true" })</td>
            </tr>
            <tr>
                <td class="name">用户数量：</td>
                <td class="input">@Html.TextBoxFor(o => o.UserNum, new { @class = "easyui-numberbox", data_options = "required:true,precision:0" })</td>
                <td class="name">门店数量：</td>
                <td class="input">@Html.TextBoxFor(o => o.StoreNum, new { @class = "easyui-numberbox", data_options = "required:true,precision:0" })</td>
            </tr>
            <tr>
                <td class="name">分店专属后台：</td>
                <td class="input">@Html.RadioButtonFor(o => o.StoreProper,"Y",new { @class = "easyui-switchbutton" })</td>
                <td class="name">APP手机端：</td>
                <td class="input">@Html.RadioButtonFor(o => o.AppProper, "Y", new { @class = "easyui-switchbutton" })</td>
            </tr>
            <tr>
                <td class="name">POS次屏显示：</td>
                <td class="input">@Html.RadioButtonFor(o => o.PosMinorDisp, "Y", new { @class = "easyui-switchbutton" })</td>
                <td class="name">供应商专属后台：</td>
                <td class="input">@Html.RadioButtonFor(o => o.SupplierProper, "Y", new { @class = "easyui-switchbutton" })</td>
            </tr>
            <tr>
                <td class="name">批发商专属后台：</td>
                <td class="input">@Html.RadioButtonFor(o => o.WholesalerProper, "Y", new { @class = "easyui-switchbutton" })</td>
                <td class="name">可用状态：</td>
                <td class="input">@Html.RadioButtonFor(o => o.Useable, "Y", new { @class = "easyui-switchbutton" })</td>
            </tr>
            <tr>
                <td class="name">有效期(年)：</td>
                <td class="input">@Html.TextBoxFor(o => o.ValidityYear, new { @class = "easyui-slider", data_options = "width:140,min:1,max:10,showTip:true,rule:[1,'|',3,'|',5,'|',8,'|',10]" })</td>
                <td class="name">生效日期：</td>
                <td class="input">@Html.TextBoxFor(o => o.EffectiveDT, "{0:yyyy-MM-dd}", new { @class = "easyui-validatebox Wdate", data_options = "required:true" })</td>
            </tr>
        </table>
        </div>
    }
</div>
