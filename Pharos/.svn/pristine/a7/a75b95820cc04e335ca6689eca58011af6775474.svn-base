<Window xmlns:Retailing="clr-namespace:Pharos.POS.Retailing"  x:Class="Pharos.POS.Retailing.ChildPages.PayWay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Normal" WindowStyle="None"
        AllowsTransparency="True"  WindowStartupLocation="CenterScreen"
        
        Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource SkinWindowStyle}"
        Name="mainWindow" Icon="..\Images\JieSuan\1.png"  FontFamily="/Pharos.POS.Retailing;component/Fonts/#Microsoft YaHei" 
        Title="选择支付方式" Height="550" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\PayWayStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="90*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.ColumnSpan="4" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Name="InfoPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource txtTitle}" Grid.Column="0">应付金额：</TextBlock>
                <TextBlock Text="{Binding Receivable,StringFormat='{}{0:C}'}" Style="{StaticResource txtJiner}" Grid.Column="1"></TextBlock>
                
            </Grid>
        </Border>
        <Grid Grid.Row="1" Grid.Column="1" MouseDown="Cash_MouseDown" Style="{StaticResource PayGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\RMB.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}" Grid.Column="1">人民币现金<TextBlock TextDecorations="Underline" FontSize="12" >(1)</TextBlock></TextBlock>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1" Style="{StaticResource PayGrid}" MouseDown="UnionPay_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Width="90" Source="..\Images\JieSuan\UnionPay.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">银联卡<TextBlock TextDecorations="Underline" FontSize="12" >(5)</TextBlock></TextBlock>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Style="{StaticResource PayGrid}"  MouseDown="Coupon_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\daijinquan.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">代金券<TextBlock TextDecorations="Underline" FontSize="12" >(3)</TextBlock></TextBlock>
        </Grid>


        <!--<Grid  Grid.Column="2" Grid.Row="1" Style="{StaticResource PayGrid}"  MouseDown="ZhiFuBao_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\zhifubao.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">支付宝扫码<TextBlock TextDecorations="Underline" FontSize="12" >(2)</TextBlock></TextBlock>
        </Grid>-->
        <Grid  Grid.Column="2" Grid.Row="1" Style="{StaticResource PayGrid}"  MouseDown="ZhiFuBao_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\zhifubao1.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">支付宝<TextBlock TextDecorations="Underline" FontSize="12" >(2)</TextBlock></TextBlock>
        </Grid>
        <Grid  Grid.Column="2" Grid.Row="2" Style="{StaticResource PayGrid}"  MouseDown="Weixin_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\weixin1.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">微信扫码<TextBlock TextDecorations="Underline" FontSize="12" >(4)</TextBlock></TextBlock>
        </Grid>

        <Grid  Grid.Column="2" Grid.Row="3" Style="{StaticResource PayGrid}"  MouseDown="PetCard_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="240*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="..\Images\JieSuan\u1168_normal.png"></Image>
            <TextBlock Style="{StaticResource txtIconTitle}"  Grid.Column="1">储值卡<TextBlock TextDecorations="Underline" FontSize="12" >(6)</TextBlock></TextBlock>
        </Grid>

        <Border  Grid.Row="4" Grid.ColumnSpan="4" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button TabIndex="2" Grid.Column="1" Style="{StaticResource BtnBackStyle}" Background="#807C7B" Click="btnMultiMode_Click">
                    <TextBlock>多方式付款<TextBlock TextDecorations="Underline" FontSize="12" >(7)</TextBlock></TextBlock>
                </Button>
                <Button TabIndex="3" Grid.Column="2" Style="{StaticResource BtnBackStyle}" Click="Button_Click">关闭</Button>
            </Grid>
        </Border>
    </Grid>
</Window>
