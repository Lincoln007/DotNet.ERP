@{
    ViewBag.Title = "ProductWeight";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<style>
    .bar {
        height: 40px;
        margin-top: 10px;
    }

    #nav {
        font-family: "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
        position: relative;
        width: 390px;
        height: 56px;
        font-size: 14px;
        color: #999;
        /*margin: 0 auto;*/
        margin-bottom: 20px;
    }

        #nav ul {
            list-style-type: none;
        }

            #nav ul li {
                float: left;
                position: relative;
                border: 1px solid rgb(210,215,216);
                border-radius: 5px;
                margin-left: 20px;
            }

                #nav ul li:hover {
                    cursor: pointer;
                }

                #nav ul li a {
                    text-align: center;
                    border-right: 1px solid #e9e9e9;
                    padding: 15px;
                    display: block;
                    text-decoration: none;
                }

    .current {
        background-color: #f5f5f5;
        color: black;
    }
</style>
<div class="bar">
    <table class="table-toolbar">
        <tr>
            <td class="label-toolbar">
                <label>门 店：</label>
            </td>
            <td class="label-toolbar">
                <label id="store">@ViewBag.stores</label>
            </td>
            <td class="label-toolbar">
                <label>选择秤号：</label>
            </td>
            <td class="input-toolbar">
                @Html.DropDownList("scale", ViewBag.scale as List<SelectListItem>, new { @class = "easyui-combobox datacontrol", @editable = "false" })
            </td>
            <td class="input-toolbar">
                @Html.DropDownList("history", ViewBag.history as List<SelectListItem>, new { @class = "easyui-combobox datacontrol", @editable = "false" })
            </td>
            <td class="input-toolbar" style="margin-left:20px;">
                <a href="#" id="searchBtn" class="easyui-linkbutton cus4 linkbtn" data-options="iconCls:'icon-ok'" onclick="">开始发送</a>
            </td>
        </tr>
    </table>
</div>


<div class="bar" style="margin-bottom: 20px;">
    <div id="nav">
        <ul>
            <li class="current" data-index="0">
                <a>商品档案</a>
            </li>
            <li data-index="1">
                <a>已选商品</a>
            </li>
        </ul>
    </div>
</div>

<div id="product" class="easyui-layout" data-options="fit:true">
    <div data-options="region:'west',width:200">
        <ul id="tree" class="easyui-tree" data-options="url:'@Url.Action("FindTreeList")',method:'post',onSelect:treeSelect,onBeforeSelect:treeBeforeSelect,onLoadSuccess:treeSuccess"></ul>
    </div>
    <div data-options="region:'center'">
        <table id="grid"></table>
    </div>
</div>
<div id="checkProdcut">
    <table id="grid2"></table>

</div>

<script type="text/javascript">

    $(function () {
        $("#nav li").click(function () {
            $(this).addClass("current").siblings().removeClass("current");
            var val = $(this).data("index");
            if (val == 0) {
                $("#product").show();
                $("#checkProdcut").hide();
            } else {
                //$("#grid2").datagrid("resize");
                $("#checkProdcut").show();
                $("#product").hide();
            }
        })




        $("#grid").datagrid({
            url: "",
            border: true,
            rownumbers: true,
            fit: false,
            fitColumns: true,
            pagination: false,
            singleSelect: true,
            columns: [[
            { field: 'Id', hidden: true, width: 60 },
            { field: 'Member', title: '货号', width: 120 },
            { field: 'OrderSn', title: '条码', width: 100 },
            { field: 'Intergal', title: '品类', width: 60 },
            { field: 'Unit', title: '品名', width: 60 },
            { field: 'ReturnType', title: '规格', width: 60 },
            { field: 'Adapter', title: '品牌', width: 80 },
            { field: 'Condition', title: '售价', width: 160 },
            { field: 'Memo', title: '单位', width: 130 },
            ]],
        });
        $("#grid2").datagrid({
            url: "",
            border: true,
            rownumbers: true,
            fit: false,
            fitColumns: true,
            pagination: false,
            singleSelect: true,
            columns: [[
            { field: 'Id', hidden: true, width: 60 },
            { field: 'Member', title: '货号', width: 120 },
            { field: 'OrderSn', title: '条码', width: 100 },
            { field: 'Intergal', title: '品类', width: 60 },
            { field: 'Unit', title: '品名', width: 60 },
            { field: 'ReturnType', title: '规格', width: 60 },
            { field: 'Adapter', title: '品牌', width: 80 },
            { field: 'Condition', title: '售价', width: 160 },
            { field: 'Memo', title: '单位', width: 130 },
            ]],
        })

        //$("#checkProdcut").hide();

    });
