<UserControl x:Class="Pharos.Wpf.Controls.Carousel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    <Image x:Name="imgControl" Height="Auto" MaxHeight="400" Width="700" RenderOptions.BitmapScalingMode="Fant"  SnapsToDevicePixels="True" VerticalAlignment="Center" HorizontalAlignment="Center"   Stretch="Fill"></Image>
        <Border Width="50" Background="Black" Height="20" Opacity="0.4" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            </Border>
        <StackPanel Width="50"  Height="20"  HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"  Foreground="White"><Run Text="{Binding CurrentImageIndex}"></Run>/<Run Text="{Binding ImagesCount,Mode=OneWay}"></Run></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
