using Pharos.Wpf.ViewModelHelpers;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Pharos.Client.AutoUpdater.Models
{
    public class DownloadProgressModel : BaseViewModel
    {
        private string  currentFile;

        public string  CurrentFile
        {
            get { return currentFile; }
            set { currentFile = value; this.OnPropertyChanged(o => o.CurrentFile); }
        }

        private int currentFileValue;

        public int CurrentFileValue
        {
            get { return currentFileValue; }
            set { currentFileValue = value; this.OnPropertyChanged(o => o.CurrentFileValue); }
        }

        private int totalValue;

        public int TotalValue
        {
            get { return totalValue; }
            set { totalValue = value; this.OnPropertyChanged(o => o.TotalValue); }
        }
        

    }
}
