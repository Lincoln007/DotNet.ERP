@model ImportSet
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_ImportLayout.cshtml";
    var cols = Form.GetExcelCol();
    var datas = Model.FieldCols;
}
<div class="default-form" style="width:95%">
    @using (Html.BeginForm("BreakageImport", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o => o.Id)
        @Html.Hidden("StoreId", Request["StoreId"])
        <table style="margin:10px;">
            <tr>
                <th>导入文件：</th>
                <td><input type="text" class="easyui-filebox" name="file1" data-options="buttonText:'选择文件',prompt:'请选择Excel文件...',required:true,missingMessage:'请选择导入文件'" style="width:300px;" /></td>
            </tr>
        </table>
        <fieldset style="margin:0px;margin-bottom:5px;">
            <legend>导入基本配置</legend>
            <table style="margin:10px 20px 0px 10px;width:100%;height:110px;">
                <tr>
                    <th>@Html.Hidden("FieldName", "Barcode") 条码：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("Barcode") + "'" })</td>
                    <th>@Html.Hidden("FieldName", "BreakageNumber") 数量：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("BreakageNumber") + "'" })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "BreakagePrice") @(Request["breakageType"]=="0"?"批发价":"进价")：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "validType:'requiredForCombo',editable:false,value:'" + datas.GetValue("BreakagePrice") + "'" })</td>
                    
                </tr>
                <tr>
                    <th>起始行：</th>
                    <td>@Html.TextBoxFor(o => o.MinRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>终止行：</th>
                    <td>@Html.TextBoxFor(o => o.MaxRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    @*<th>新建关联记录：</th>
                    <td>@Html.CheckBoxFor(o => o.RefCreate)</td>*@
                </tr>
            </table>
        </fieldset>
    }
</div>

<script type="text/javascript">
    function Refresh(json) {
        dispErr(json.message, json.descript);
        if (json.data) {
            var $dg = pharos.easyui.dialog.curJquery("formDiv")("#grid2");
            $.each(json.data, function (idx, row) {
                $dg.datagrid('insertRow',
                {
                    index: idx,
                    row: {
                        ProductCode: row.ProductCode, Barcode: row.Barcode, Title: row.ProductTitle, SubUnit: row.Unit, BreakagePrice: row.OutPrice,
                        BreakageNumber: row.OutboundNumber, Subtotal: row.OutboundNumber * row.OutPrice, Id: guidGenerator()
                    }
                });
            });
        }
    }
</script>