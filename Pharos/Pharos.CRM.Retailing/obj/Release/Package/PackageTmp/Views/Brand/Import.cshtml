@model ImportSet
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_ImportLayout.cshtml";
    var cols = Form.GetExcelCol();
    var datas = Model.FieldCols; 
}
<div class="default-form" style="width:400px">
    @using (Html.BeginForm("Import","Brand",FormMethod.Post,new{enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(o=>o.Id)
        <table style="margin:10px;">
            <tr>
                <th>导入文件：</th>
                <td><input type="text" class="easyui-filebox" name="file1" data-options="buttonText:'选择文件',prompt:'请选择Excel文件...',required:true,missingMessage:'请选择导入文件'" style="width:300px;" /></td>
            </tr>
        </table>
        <fieldset>
            <legend>导入基本配置</legend>
            <table style="margin:10px 20px 0px 10px;height:120px;width:100%">
                <tr>
                    <th>@Html.Hidden("FieldName", "ClassifyId")品牌分类：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false" + (datas == null ? "" : ",value:'" + datas["ClassifyId"] + "'") })</td>
                    <th>@Html.Hidden("FieldName", "Title")品牌名称：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false" + (datas == null ? "" : ",value:'" + datas["Title"] + "'") })</td>
                </tr>
                <tr>
                    <th>@Html.Hidden("FieldName", "JianPin")检索简拼：</th>
                    <td>@Html.DropDownList("ColumnName", cols, new { @class = "easyui-combobox", data_options = "editable:false" + (datas == null ? "" : ",value:'" + datas["JianPin"]+"'") })</td>
                    <th>新建分类：</th>
                    <td>@Html.CheckBoxFor(o => o.RefCreate)</td>
                </tr>
                <tr>
                    <th>起始行：</th>
                    <td>@Html.TextBoxFor(o => o.MinRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                    <th>终止行：</th>
                    <td>@Html.TextBoxFor(o => o.MaxRow, new { @class = "easyui-numberbox", style = "width:85px" })</td>
                </tr>
            </table>
        </fieldset>
    }
</div>