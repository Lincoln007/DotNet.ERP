@{
    ViewBag.Title = Pharos.Sys.SysConstPool.Page_Title;
}
<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'north',border:false" style="height:40px;">
        <form id="frmsearch">
            <table class="table-toolbar">
                <tr>
                    <td class="label-toolbar">
                        <label>品类：</label>
                    </td>
                    <td class="input-toolbar">
                        <select class="datacontrol easyui-combobox" name="parentType" data-options="data:pharos.dropdown['parenttypes']"></select>
                    </td>
                    <td class="input-toolbar">
                        <select class="datacontrol easyui-combobox" name="childType" data-options="data:pharos.dropdown['childtypes']"></select>
                    </td>
                    <td class="label-toolbar">
                        <label>关键字：</label>
                    </td>
                    <td class="input-toolbar">
                        <input name="searchText" class="datacontrol input-toolbar font-12" placeholder="货号/品名/条码" />
                    </td>
                    <td><a href="#" style="margin-left:4px;" id="searchBtn" class="easyui-linkbutton cus4 linkbtn" data-options="iconCls:'icon-search'" onclick="gridReload()">查询</a></td>
                </tr>
            </table>
        </form>
    </div>
    <div data-options="region:'center',border:false">
        <table class="easyui-datagrid" id="gridSel"
               data-options="url:'@Url.Action("SelectProduct")',checkOnSelect:false,border:true,rownumbers:true,fit:true,fitColumns:true,pagination:true,onCheck:editCheck,onUncheck:editUncheck,onSelect:editSelect,onDblClickRow:editCheck,onLoadSuccess:loadSuccess">
            <thead>
                <tr>
                    <th data-options="field:'Id',checkbox: true" width="50"></th>
                    <th data-options="field:'Cd'" width="80">货号</th>
                    <th data-options="field:'Code'" width="150">条码</th>
                    <th data-options="field:'Name'" width="150">品名</th>
                    <th data-options="field:'SUnit'" width="50">单位</th>
                    <th data-options="field:'SupplyCount',editor:{type:'validatebox',options:{required:true}}" width="60">数量</th>
                    <th data-options="field:'Memo',editor:{type:'validatebox'}" width="120">备注</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
    <script type="text/javascript">
        var endIdx = 0;
        var $dg3 = $("#gridSel");
        function editCheck(rowIndex, rowData) {
            var re = $dg3.datagrid("validateRow", endIdx);
            if (re) {
                $dg3.datagrid('endEdit', endIdx);
                $dg3.datagrid('beginEdit', rowIndex);
                endIdx = rowIndex;
                var ed = $dg3.datagrid('getEditor', { index: rowIndex, field: 'SupplyCount' });
                $(ed.target).focus().select();
            }
        }
        function editUncheck(rowIndex, rowData) {
            $dg3.datagrid('cancelEdit', rowIndex);
            // endIdx = rowIndex;
            //alert(rowIndex);
        }
        function editSelect(rowIndex, rowData) {
            var re = $dg3.datagrid("validateRow", endIdx);
            if (re) {
                $dg3.datagrid('endEdit', endIdx);
            }
        }
        function existsSelect(rows, cd) {
            var result = { exists: false, index: -1 };
            $.each(rows, function (idx, row) {
                if (row.Cd == cd) {
                    result.exists = true;
                    result.index = idx;
                    return;
                }
            });
            return result;
        }
        function loadSuccess(data) {
            var d = $dg2.datagrid("getData");
            $.each(d.rows, function (index, row) {
                var result = existsSelect(data.rows, row.ProdcutCd);
                if (result.exists) {
                    $dg3.datagrid("checkRow", result.index).datagrid("updateRow", {
                        index: result.index,
                        row: { SupplyCount: row.Amount, Memo: row.Memo }
                    });
                }
            });
        }
        function gridReload() {
            this.$dg3.datagrid('options').url = "@Url.Action("SelectProduct")?" + $('#frmsearch').serialize();
            this.$dg3.datagrid('reload');
        }
    </script>
