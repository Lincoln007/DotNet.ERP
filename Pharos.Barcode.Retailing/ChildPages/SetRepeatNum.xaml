<Window x:Class="Pharos.Barcode.Retailing.ChildPages.SetRepeatNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置打印份数" Height="300" Width="500" WindowStyle="ToolWindow" FontSize="18" FontFamily="/Pharos.Barcode.Retailing;component/Fonts/#Microsoft YaHei UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center">选择打印商品数量：<Run Text="{Binding CheckedCount,Mode=OneWay}"></Run></TextBlock>
        <StackPanel Grid.Row="1">
            <TextBlock Margin="50,0,0,0">份数:</TextBlock>
            <TextBox Text="{Binding RepeatNum}" Height="40" Width="250" Margin="80,0,0,0" HorizontalAlignment="Left" VerticalContentAlignment="Center"></TextBox>
        </StackPanel>
        <Button Grid.Row="2" Height="50" Width="150" Command="{Binding OKPrintCommand}">确定</Button>
    </Grid>
</Window>
