<?xml version="1.0"?>
<configuration>
    <configSections>
        <section name="superSocket" type="SuperSocket.SocketEngine.Configuration.SocketServiceConfig, SuperSocket.SocketEngine" />
          <section name="RedisConfig" type="Pharos.Infrastructure.Data.Redis.RedisConfiguration,Pharos.Infrastructure.Data" />
      <sectionGroup name="common">
        <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
      </sectionGroup>
    </configSections>
  <RedisConfig ConnectionString="127.0.0.1:6379,keepAlive=180" />
  
    <appSettings>
      <add key="ConnectionString" value="Data Source=27.154.234.10,3341;database=Pharos_Dev;uid=pharos_admin;pwd=pharos_admin;" />
      <add key="ServiceName" value="SupperSocketService" />
    </appSettings>
    <superSocket>
        <servers>
            <server name="SocketServer01"
                    serverTypeName="SocketServer"
                    ip="Any" port="2020"
        maxConnectionNumber="10000"
        clearIdleSession="true"
        clearIdleSessionInterval="300"
        idleSessionTimeOut="120"
        keepAliveTime="6000"
        keepAliveInterval="600"
                    >
            </server>
        </servers>
        <serverTypes>
            <add name="SocketServer" type="Pharos.SocketService.Retailing.Protocol.AppServers.PosStoreServer, Pharos.SocketService.Retailing" />
        </serverTypes>
    </superSocket>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
    </startup>
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.Log4Net.Log4NetLoggerFactoryAdapter, Common.Logging.Log4Net1211">
        <arg key="configType" value="FILE-WATCH" />
        <arg key="configFile" value="~/Config/log4net.config" />
      </factoryAdapter>
    </logging>
  </common>
</configuration>
