using Pharos.POS.Retailing.Models;
using Pharos.POS.Retailing.MultipScreen;
using System.Windows;

namespace Pharos.POS.Retailing.MinorScreenPage
{
    /// <summary>
    /// CustomerViewForOld.xaml 的交互逻辑
    /// </summary>
    public partial class CustomerViewForOld : Window, IMultipScreen
    {
        public CustomerViewForOld()
        {
            InitializeComponent();
            PosMachineInfo.ReadConfig();
            titlePanel.DataContext = PosMachine.Current;
            DataGridGoods.ItemsSource = PosMachine.Current.BillList;
            totalPanal.DataContext = PosMachine.Current.BillList;
        }

        public WindowStartupLocationInScreen InScreen
        {
            get { return WindowStartupLocationInScreen.Maximized; }
        }

        public int Index
        {
            get { return 1; }
        }

        public bool IngoreMinorScreenError
        {
            get { return true; }
        }
    }
}
