@{
    ViewBag.Title = "TakeCouponIndex";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "新增积分规则", delText: "移除", hideDel: true));
}
@section search{
    <table class="table-toolbar">
        <tr>
            <td class="label-toolbar">
                <label>规则方式：</label>
            </td>
            <td class="input-toolbar">
                <select class="easyui-combobox">
                    <option>全部</option>
                    <option>按消费金额</option>
                    <option>按付款方式</option>
                    <option>按指定品类</option>
                    <option>按具体商品</option>
                    <option>按消费次数</option>
                </select>
            </td>
            <td class="input-toolbar">
                &nbsp;<input type="text" class="easyui-textbox" data-options="prompt:''" />
            </td>
        </tr>
    </table>
}
@section toolbar
{
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" onclick="">设为无效</a>
}

<script type="text/javascript">
    pharos.manager.geturl = "@Url.Action("FindIntegralRulePageList")";
    pharos.manager.editurl = "@Url.Action("CreateIntegralRule")";
    pharos.manager.columns = [[
        { field: 'Id', checkbox: true },
        { field: 'StateTitle', title: '状态', width: 80 },
        { field: 'StateTitle2', title: '有效期', width: 80 },
        { field: 'StateTitle3', title: '适用客户群', width: 80 },
        { field: 'StateTitle4', title: '转换比例', width: 80 },
        { field: 'StateTitle5', title: '包含促销', width: 80 },
        { field: 'StateTitle6', title: '规则方式', width: 80 },
        { field: 'StateTitle7', title: '扩展信息', width: 80 },
        { field: 'StateTitle8', title: '创建时间', width: 80 },
        { field: 'StateTitle9', title: '创建人', width: 80 },
    ]];

</script>