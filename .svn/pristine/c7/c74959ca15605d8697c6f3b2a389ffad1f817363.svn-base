using Pharos.Logic.ApiData.Pos.User;
using Pharos.Logic.ApiData.Pos.ValueObject;
using Pharos.Logic.BLL;
using Pharos.Logic.DAL;
using Pharos.Logic.Entity;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Services
{
    public class PosIncomePayoutService : BaseGeneralService<Pharos.Logic.Entity.PosIncomePayout, EFDbContext>
    {
        public static void Save(string storeId, string machineSn, string uid, decimal money, PosIncomePayoutMode mode, int token)
        {
            try
            {
                CurrentRepository.Add(new PosIncomePayout()
                {
                    Amount = money,
                    CreateDT = DateTime.Now,
                    CreateUID = uid,
                    MachineSN = machineSn,
                    StoreId = storeId,
                    Type = (short)mode,
                    CompanyId = token
                });
            }
            catch (Exception ex)
            {
                throw ex;
            }
        }

        public static void DayMonthReport(DateTime from, DateTime to, ref DayReportResult result, string storeId, string machineSn, int token)
        {
            var entities = CurrentRepository.Entities.Where(o => o.CreateDT >= from && o.CreateDT < to && o.StoreId == storeId && o.CompanyId == token);
            if (!string.IsNullOrEmpty(machineSn))
            {
                entities = entities.Where(o => o.MachineSN == machineSn);
            }
            var users = (from a in entities
                         from b in SysStoreUserInfoService.CurrentRepository.Entities
                         where a.CreateUID == b.UID && b.CompanyId == token
                         select new { b.UserCode, a.CreateUID, b.FullName }
                         ).ToList();

            var query = entities.GroupBy(o => o.CreateUID).ToList();
            foreach (var item in query)
            {
                var record = result.SalesmanRecords.FirstOrDefault(o => o.UserCode == item.Key);
                if (record == null)
                {
                    var user = users.FirstOrDefault(o=>o.CreateUID == item.Key);
                    record = new SalesmanDayReportResult()
                    {
                        StartTime = default(DateTime),
                        EndTime = default(DateTime),
                        UserCode = user.UserCode,
                        Salesman = user.FullName,
                        Sale = new SalesmanDayReportSaleResult()
                        {
                            SaleInfo = new DayReportDetailItem() { Number = 0, Amount = 0m, Project = "销售合计" },
                            PayWay = new List<PayWayItem>()
                        },
                        Other = new List<DayReportDetailItem>()
                    };
                    result.SalesmanRecords.Add(record);
                }
                var rukuan = item.Where(o => o.Type == 1);
                record.Other.Add(new DayReportDetailItem()
                {
                    Project = "入款合计",
                    Amount = rukuan.Sum(o => o.Amount),
                    Number = rukuan.Count()
                });
                var chukuan = item.Where(o => o.Type == 0);
                record.Other.Add(new DayReportDetailItem()
                {
                    Project = "出款合计",
                    Amount = chukuan.Sum(o => o.Amount),
                    Number = chukuan.Count()
                });
            }
        }
    }
}
