using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Sale.Marketings
{
    /// <summary>
    /// 促销动作
    /// </summary>
    public class MarketingAction
    {
        /// <summary>
        /// 促销动作类型
        /// </summary>
        public MarketingActionMode MarketingActionMode { get; set; }

        /// <summary>
        /// 赠品列表（可为赠品列表，或者加购赠品列表的条码）
        /// </summary>
        public IEnumerable<string> Gifts { get; set; }

        /// <summary>
        /// 活动促销优惠数量
        /// </summary>
        public decimal MarketingActionNumber { get; set; }

        /// <summary>
        /// 加钱
        /// </summary>
        public decimal AddMoney { get; set; }

        /// <summary>
        /// 折扣
        /// </summary>
        public decimal Discount { get; set; }

        /// <summary>
        /// 折后金额
        /// </summary>
        public decimal DiscountAmount { get; set; }

        /// <summary>
        /// 是否允许累加促销
        /// </summary>
        public bool Repeatable { get; set; }

    }
}
