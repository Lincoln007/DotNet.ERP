@{
    ViewBag.Title = "CreateCoupon";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <table class="table-form" width="100%">
                <tr>
                    <td class="name">类别：</td>
                    <td class="input"><select class="easyui-combobox"><option>请选择</option></select></td>
                    <td class="name">形式：</td>
                    <td class="input">
                        <select class="easyui-combobox">
                            <option>请选择</option>
                            <option>电子</option>
                            <option>短信</option>
                            <option>纸质</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="name">新增数量：</td>
                    <td class="input"><input type="text" class="easyui-textbox" /></td>
                    <td class="name">有效期限：</td>
                    <td class="input"><input type="text" class="easyui-validatebox Wdate" /></td>
                </tr>
                <tr>
                    <td class="name">适用门店：</td>
                    <td class="input">
                        <select class="easyui-combobox">
                            <option>请选择</option>
                            <option>门店1</option>
                        </select>
                    </td>
                    <td class="name">适用商品：</td>
                    <td class="input"><input type="text" class="easyui-combobox" /></td>
                </tr>
            </table>
        </div>
    }
</div>