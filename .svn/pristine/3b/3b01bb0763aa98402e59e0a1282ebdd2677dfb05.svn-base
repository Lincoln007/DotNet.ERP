        #region 获取支付状态

        public int GetStatus(int apiCode, string paySn)
        {
            var entity = Pharos.Logic.BLL.PayNotifyResultService.Find(o => o.ApiCode == apiCode && o.PaySN == paySn);
            if (entity == null)
            {
                return 0;
            }
            else if (entity.State == "Success")
            {
                return 1;
            }
            else
            {
                return -1;
            }
        }
        #endregion 获取支付状态

