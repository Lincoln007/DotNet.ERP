using Pharos.Logic.ApiData.Pos.User;
using Pharos.Logic.BLL;
using Pharos.Logic.DAL;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Services
{
    public class PosIncomePayoutService : BaseGeneralService<Pharos.Logic.Entity.PosIncomePayout, EFDbContext>
    {
        public static void Save(string storeId, string machineSn, string uid, decimal money, PosIncomePayoutMode mode)
        {
            try
            {
                CurrentRepository.Add(new Entity.PosIncomePayout()
                {
                    Amount = money,
                    CreateDT = DateTime.Now,
                    CreateUID = uid,
                    MachineSN = machineSn,
                    StoreId = storeId,
                    Type = (short)mode
                });
            }
            catch (Exception ex)
            {
                throw ex;
            }
        }
    }
}
