@{
    ViewBag.Title = "CreateReturnRules";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <table class="table-form" width="98%" height="180px">
                <tr>
                    <td class="name">适配规则：</td>
                    <td class="input">@Html.RadioButtonList(ViewBag.Adapters as List<SelectListItem>, "Adapters")</td>
                </tr>
                <tr>
                    <td class="name">规则：</td>
                    <td class="input">
                        <input type="text" name="Number1" style="width:50px"/>
                        @Html.DropDownList("LeftSign", ViewBag.LeftSign as List<SelectListItem>, new { @class = "easyui-combobox", data_options = "width:50px" })
                        X
                        @Html.DropDownList("RightSign", ViewBag.RightSign as List<SelectListItem>, new { @class = "easyui-combobox", data_options = "width:50px" })
                        <input type="text" name="Number2" style="width:50px"/>
                    </td>
                </tr>
                <tr>
                    <td class="name">计量方式：</td>
                    <td class="input">@Html.RadioButtonList(ViewBag.Mode as List<SelectListItem>, "Mode")</td>
                </tr>
                <tr>
                    <td class="name">限定范围：</td>
                    <td class="input"></td>
                </tr>
                <tr>
                    <td class="name">运算方式：</td>
                    <td class="input">@Html.DropDownList("OperationType", ViewBag.OperationType as List<SelectListItem>, new { @class = "easyui-combobox", data_options = "width:80px" }) 赠送<input type="text" name="Expression" /></td>
                </tr>
                <tr>
                    <td class="name">赠送类型：</td>
                    <td class="input">@Html.RadioButtonList(ViewBag.GivenType as List<SelectListItem>, "GivenType")</td>
                </tr>
            </table>
        </div>
    }
</div>
