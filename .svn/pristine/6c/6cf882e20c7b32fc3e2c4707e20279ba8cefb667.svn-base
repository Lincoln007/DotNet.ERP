using Pharos.Logic.ApiData.Pos.DataAdapter;
using Pharos.Logic.ApiData.Pos.ValueObject;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.Logic.ApiData.Pos.Sale.AfterSale
{
    public class BillHistory
    {
        public static BillHistoryInfo GetBillDetails(string storeId, string machineSn, string paySn)
        {
            var dataAdapter = DataAdapterFactory.Factory(MachinesSettings.Mode, storeId, machineSn);
            return dataAdapter.GetBillDetailsHistory(paySn);
        }

        public static IEnumerable<BillListItem> GetBills(string storeId, string machineSn, DateTime date) 
        {
            var dataAdapter = DataAdapterFactory.Factory(MachinesSettings.Mode, storeId, machineSn);
            return dataAdapter.GetBills(date);
        }
    }
}
