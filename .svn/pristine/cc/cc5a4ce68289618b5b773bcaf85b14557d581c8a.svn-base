<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.TuiHuanHuoProductEdit"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="商品" Height="400" Width="400" WindowStartupLocation="CenterScreen"
        Icon="..\Images\ChaKuCun\search.png" Margin="0"   InputMethod.PreferredImeState="Off" InputMethod.IsInputMethodEnabled="False"  WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ProductEditorStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource titleStyle}" Text="条码："></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource rightTextStyle}" Text="{Binding Barcode}"></TextBlock>

        <TextBlock Grid.Row="1"  Style="{StaticResource titleStyle}" Text="品名："></TextBlock>
        <TextBlock  Grid.Row="1" TextWrapping="Wrap"  Grid.Column="1" Style="{StaticResource rightTextStyle}" Text="{Binding Title}"></TextBlock>

        <TextBlock Grid.Row="2"  Style="{StaticResource titleStyle}" Text="数量："></TextBlock>
        <Grid  Grid.Row="2" Grid.Column="1" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <control:PosButton IsEnabled="{Binding EnableEditNumForButton,Mode=OneWay}" Margin="0" IsTabStop="False" KeyboardNavigation.ControlTabNavigation="None" Background="Gray" Foreground="White"  FontSize="20" FontFamily="/Pharos.Wpf;component/Fonts/#FontAwesome" Content="&#xf068;" Command="{Binding NumDec}">
            </control:PosButton>
            <control:IconTextBox IsReadOnly="{Binding EnableEditNum}"  Name="txtnum" InputMethod.PreferredImeState="Off" InputMethod.IsInputMethodEnabled="False" Grid.Column="1" TabIndex="0" BorderThickness="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" BorderBrush="White" FontSize="18" Text="{Binding ChangeNumber,StringFormat='{}{0:0.####}',Mode=TwoWay}"></control:IconTextBox>
            <control:PosButton IsEnabled="{Binding EnableEditNumForButton,Mode=OneWay}" Margin="0" IsTabStop="False"  KeyboardNavigation.ControlTabNavigation="None"  Grid.Column="2" Background="Gray" FontSize="20" Foreground="White" FontFamily="/Pharos.Wpf;component/Fonts/#FontAwesome" Content="&#xf067;" Command="{Binding NumAdd}">
            </control:PosButton>
        </Grid>



        <TextBlock Grid.Row="3" Grid.Column="0"  Style="{StaticResource titleStyle}" Text="价格："></TextBlock>
        <control:IconTextBox Name="txtprice"  IsReadOnly="{Binding EnableEditPrice}"  InputMethod.PreferredImeState="Off" InputMethod.IsInputMethodEnabled="False" TabIndex="3" Grid.Row="3" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding ChangePrice,StringFormat='{}{0:N2}',Mode=TwoWay}"></control:IconTextBox>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="20,0,0,0"  Style="{StaticResource titleStyle}"><Run Text="系统售价："/><Run Text="{Binding SysPrice}"></Run></TextBlock>



        <control:PosButton Style="{StaticResource BtnSearchStyle}" TabIndex="4" Margin="90,0,0,0" HorizontalAlignment="Center" Grid.Row="5"  Grid.ColumnSpan="2" Content="确定(Y)" Command="{Binding Confirm}"></control:PosButton>
    </Grid>

</control:DialogWindow02>

