namespace Pharos.POS.Retailing.ChildWin
{
    /// <summary>
    /// Goto.xaml 的交互逻辑
    /// </summary>
    public partial class Goto : Window
    {
        public Goto()
        {
            InitializeComponent();
            this.Loaded += Goto_Loaded;
            this.PreviewKeyDown += Goto_PreviewKeyDown;
        }

        void Goto_PreviewKeyDown(object sender, KeyEventArgs e)
        {
            switch (e.Key)
            {
                case Key.Enter:
                    txtGoto.MoveFocus(new TraversalRequest(FocusNavigationDirection.Next));
                    break;
            }

        }

        void Goto_Loaded(object sender, RoutedEventArgs e)
        {
            Keyboard.Focus(txtGoto);
        }
    }
}
