@{
    ViewBag.Title = "TakeCouponIndex";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "新增类型", delText: "移除", hideDel: true,hideSearch:true));
}
@section search{
    <table class="table-toolbar">
        <tr>
            <td class="label-toolbar">
                <label>规则方式：</label>
            </td>
            <td class="input-toolbar">
                <select class="easyui-combobox">
                    <option>全部</option>
                    <option>按消费金额</option>
                    <option>按付款方式</option>
                    <option>按指定品类</option>
                    <option>按具体商品</option>
                    <option>按消费次数</option>
                </select>
            </td>
            <td class="input-toolbar">
                &nbsp;<input type="text" class="easyui-textbox" data-options="prompt:''" />
            </td>
        </tr>
    </table>
}
@section toolbar
{
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" onclick="">设为可用</a>
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" onclick="">设为禁用</a>
}

<script type="text/javascript">
    pharos.manager.geturl = "@Url.Action("FindMemberCardTypeList")";
    pharos.manager.editurl = "@Url.Action("CreateMemberCardType")";
    pharos.manager.columns = [[
        { field: 'Id', checkbox: true },
        { field: 'StateTitle', title: '类型', width: 80 },
        { field: 'StateTitle2', title: '种类', width: 80 },
        { field: 'StateTitle3', title: '会员量', width: 80 },
        { field: 'StateTitle4', title: '优惠方式', width: 80 },
        { field: 'StateTitle5', title: '积分方式', width: 80 },
        { field: 'StateTitle6', title: '允许充值', width: 80 },
        { field: 'StateTitle7', title: '最低充值', width: 80 },
        { field: 'StateTitle8', title: '初始金额', width: 80 },
        { field: 'StateTitle9', title: '初始积分', width: 80 },
        { field: 'StateTitle10', title: '备注', width: 80 },
        { field: 'StateTitle11', title: '状态', width: 80 },
        { field: 'StateTitle12', title: '创建时间', width: 80 },
        { field: 'StateTitle13', title: '创建人', width: 80 },
    ]];

</script>