@{
    ViewBag.Title = "RechargeIndex";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "充值", delText: "移除", hideDel: true));
}
@section search{
<table class="table-toolbar">
    <tr>
        <td class="label-toolbar">
            <label>充值日期:</label>
        </td>
        <td class="input-toolbar">
            <input name="date1" class="datacontrol Wdate" style="width:120px" />
        </td>
        <td style="float:left;margin-left:7px;margin-right:7px;line-height:28px;">-</td>
        <td class="input-toolbar">
            <input name="date2" class="datacontrol Wdate" style="width:120px" />
        </td>
        <td class="label-toolbar">
            <label>关键词：</label>
        </td>
        <td class="input-toolbar">
            <input id="title" name="title" class="datacontrol easyui-textbox" data-options="prompt:'卡号或会员'" />
        </td>
    </tr>
</table>
}
@section toolbar
{
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" onclick="">余额转入</a>
    <a class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-usable'" onclick="">打印凭证</a>
}

<script type="text/javascript">
    pharos.manager.geturl = "@Url.Action("FindRechargePageList")";
    pharos.manager.editurl = "@Url.Action("CreateRecharge")";
    pharos.manager.columns = [[
        { field: 'Id', checkbox: true },
        { field: 'StateTitle', title: '卡号', width: 80 },
        { field: 'StateTitle2', title: '持卡人', width: 80 },
        { field: 'StateTitle3', title: '充前金额', width: 80 },
        { field: 'StateTitle4', title: '充值金额', width: 80 },
        { field: 'StateTitle5', title: '赠送金额', width: 80 },
        { field: 'StateTitle6', title: '可用金额', width: 80 },
        { field: 'StateTitle7', title: '充值时间', width: 80 },
        { field: 'StateTitle8', title: '充值方式', width: 80 },
        { field: 'StateTitle9', title: '备注', width: 80 },
        { field: 'StateTitle10', title: '操作人', width: 80 },
    ]];
    pharos.manager.addItem = function () {
        openDialog600(this.addText, this.editurl,true);
        window.top.$('#lbsave .l-btn-text').width(100).html('充值不打印');
        window.top.$('#lbadd').find(".l-btn-text").width(100).html('充值并打印');
    }
</script>