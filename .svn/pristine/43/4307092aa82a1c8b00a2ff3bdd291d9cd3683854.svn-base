@using Pharos.Logic.OMS.Entity
@using Pharos.Logic.OMS.Entity.View
@model  Traders
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<style type="text/css">
    .formbox td {
        padding: 5px 0px;
    }




    #tab {
        overflow: hidden;
    }

        #tab a {
            display: block;
            width: 100px;
            height: 35px;
            line-height: 35px;
            text-align: center;
            color: #232323;
            font-size: 104%;
            float: left;
            border: 1px solid #d4d4d4;
            overflow: hidden;
            margin-bottom: 10px;
        }

   #tab .sel {
            background-color: #d4d4d4;
  }

   #tabSummary {
        border-collapse: collapse;
    }

  #tabSummary, #tabSummary th, #tabSummary td {
       border: 1px solid #ccc;
  }

 #tabSummary td {
         padding: 7px 0px;
 }

 #tabSummary td .noedit {
       border: 0px;
      text-align: center;
  }



</style>

<script type="text/javascript">


    //加载次数
    var loadNum = 0;
    //加载省份
    function loadProvince() {
        $('#Province').combobox({
            url: '/Member/getProvince',
            valueField: 'AreaID',
            textField: 'Title',
            editable: false,
            width: 100,
            required: isRequired,
            novalidate: false,
            validType: 'requiredForCombo',
            onChange: function (newValue, oldValue) {
                loadCity(newValue);
                loadDistrict(0);
            },
            onLoadSuccess: function () {
                $(this).combobox('setValue', '@Model.CurrentProvinceId');
                //所有客户
                if (all == "0") {
                    $(this).combobox("readonly");
                }
            }
        });

    }

    //加载城市
    function loadCity(provinceKey) {
        $('#City').combobox({
            url: '/Member/getCity?ProvinceID=' + provinceKey,
            valueField: 'AreaID',
            textField: 'Title',
            editable: false,
            width: 100,
            required: isRequired,
            novalidate: false,
            validType: 'requiredForCombo',
            onChange: function (newValue, oldValue) {
                loadDistrict(newValue);
            },
            onLoadSuccess: function () {
                if (loadNum<2)
                {
                    $(this).combobox('setValue', '@Model.CurrentCityId');
                }
                //所有客户
                if (all == "0") {
                    $(this).combobox("readonly");
                }
            }
        });

    }

    //加载省市区
    function loadPCD() {
        loadProvince();
    }

    $(function () {

        loadPCD();

        VerificationBusinessCategory();

        $("#tab a").click(function (){
            v=$(this).attr("v");
            $("#tab a").removeClass("sel");
            $(this).addClass("sel");
            $(".formbox").hide();
            $("."+v).show();
        }).eq(0).trigger("click");

        //售卖商品简述
        $("#BriefIntroduction").keyup(function () {
            brief(this);
        }).trigger("keyup");

        //经营类目
        $("input[name=BusinessCategory]").click(function () {
            VerificationBusinessCategory();
        });

    });


    function SaveBefore() {
        return true;
    }

    //售卖商品简述
    function brief(oTextArea) {
        //获得textarea的maxlength属性
        var MaxLength = oTextArea.getAttribute("maxlength");
        var num = MaxLength - oTextArea.value.length;
        $('#b_num').html(num);
    }

    //经营类目
    function VerificationBusinessCategory() {
        if ($("input[name=BusinessCategory]:checked").size() <= 0)
            $("#DivBusinessCategory").validatebox("enableValidation");
        else
            $("#DivBusinessCategory").validatebox("disableValidation");
    }
</script>

<div class="default-form">
    @using (Html.BeginForm())
    {

        <div class="content">

            <div id="tab">
                <a href="javascript:;" v="tab1">经营信息</a>
                <a href="javascript:;" v="tab2" style="border-left-style:none; border-right-style:none;">商户信息</a>
                <a href="javascript:;" v="tab3" style="border-left-style:none; border-right-style:none;">结算账户</a>
                <a href="javascript:;" v="tab4">审核日志</a>
            </div>

            <div class="formbox tab1" style="display:none;">
                <table class="table-form" width="100%" height="100px">
                    <tr>
                        <td class="name">指派人：</td>
                        <td class="input">@Html.DropDownListFor(o => o.AssignerUID, ViewBag.user as List<SelectListItem>, new { @class = "easyui-combobox datacontrol", data_options = "required:true,novalidate:true,validType:'requiredForCombo', editable: false,width:120" })</td>
                        <td class="name" style="width:8%;">商户号：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-combobox", data_options = "required:true,prompt:'请输入',validType: 'integer',width:120" })</td>
                        <td class="name">商户名称：</td>
                        <td class="input">@Html.TextBoxFor(o=>o.Title, new { @class = "easyui-textbox", data_options = "required:false,prompt:'',width:140,readonly:true" })</td>
                        <td class="name" style="width:8%;">所属体系：</td>
                        <td class="input">@Html.TextBoxFor(o => o.BusinessModeId, new { @class = "easyui-textbox", data_options = "required:false,width:120,readonly:true" })</td>
                    </tr>

                    <tr>
                        <td class="name">服务商号：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Source, new { @class = "easyui-combobox", data_options = "required:true,prompt:'为空表示无',validType: 'integer',width:120,editable:true" })</td>
                        <td class="name">城市：</td>
                        <td class="input" colspan="3">
                            <input id="Province" name="CurrentProvinceId" class="easyui-combobox datacontrol" />-
                            <input id="City" name="CurrentCityId" class="easyui-combobox datacontrol" />
                        </td>
                        <td class="name">企业性质：</td>
                        <td class="input">@Html.DropDownListFor(o => o.ExistStoreNum, ViewBag.user as List<SelectListItem> as List<SelectListItem>, new { @class = "easyui-combobox datacontrol", data_options = "editable: false,width:120,validType:'requiredForCombo'" })</td>
                    </tr>

                    <tr>
                        <td class="name">经营类目：</td>
                        <td class="input" colspan="7" style="width:90%; line-height:30px;">
                            <div id="DivBusinessCategory" style="padding:5px;" data-options="required:true,missingMessage:'至少选择一项'" class="easyui-validatebox">
                                @foreach (var v in ViewBag.BusinessScopeId as List<Business>)
                                {
                                    <input type="checkbox" value="@v.ById" id="BusinessScopeId_@v.Id" name="BusinessCategory" @(Html.Raw(Model.BusinessScopeId.Contains(v.ById.ToString()) ? "checked=\"checked\"" : "")) />@:&nbsp;<label for="BusinessScopeId_@v.Id">@v.Title</label>&nbsp; &nbsp;
                                }
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td class="name">商家支付联系人：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:true,prompt:'限4-50个字符',width:120,validType:'length[4,50]'" })</td>
                        <td class="name" style="width:8%;">手机号：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:true,prompt:'',width:120,validType:'mobile'" })</td>
                        <td class="name">常用邮箱：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:true,prompt:'',width:120,validType:'email'" })</td>
                        <td class="name" style="width:8%;">客服电话：</td>
                        <td class="input">@Html.TextBoxFor(o => o.BusinessModeId, new { @class = "easyui-textbox", data_options = "required:true,prompt:'限50个字符，多个用逗号间隔',width:120" })</td>
                    </tr>

                </table>
            </div>

            <div class="formbox tab1" style="display:none;">
                <table class="table-form" width="100%">

                    <tr>
                        <td class="name" style="width:13%;">资质或证件上传：</td>
                        <td class="input" colspan="3">
                            <div>
                                <input type="text" class="easyui-filebox" name="IDPhoto1" data-options="buttonText:'选择文件',prompt:'请选择文件',required:true,missingMessage:'请选择文件',onChange:function(){selFile(this)}" style="width:300px;" />
                            </div>
                            <div style="color:#ff0000;">
                                若不涉及特殊商品， 此处请上传《营业执照》。<br/>
                                图片文件大小限1Mb以内，格式为bmp、png、jpeg、jpg或gif。
                            </div>
                        </td>
                        <td class="input" colspan="4">
                            <a href="javascript:void(0)" id="AIDPhoto1" style="" onclick="return seeImg(this)">
                                <img id="ImgIDPhoto1" src="@ViewBag.img" style="width:50px; height:50px; vertical-align:middle;" />
                            </a>
                            &nbsp;&nbsp;
                            <a href="javascript:void(0)" id="DelIDPhoto1" style="" onclick="">【移除】</a>
                        </td>
                    </tr>

                </table>
            </div>

            <div class="formbox tab1" style=" border-bottom:0px; display:none;">
                <table class="table-form" width="100%">

                    <tr>
                        <td class="name" style="width:13%;">售卖商品简述：</td>
                        <td class="input">@Html.TextArea("BriefIntroduction", new { @class = "easyui-validatebox", style = "width:709px; height: 100px; max-width: 709px; max-height: 100px; resize: none; ", maxlength = "300", data_options = "novalidate:false,required:false,prompt:'',validType: 'length[0,300]'" })</td>
                    </tr>

                    <tr id="tr_prompt">
                        <td class="name"></td>
                        <td class="input">
                        限长300个字，还可以输入 <span style="color:#FF0000;" id="b_num">300</span> 个字<br />
                        <span style="color:#ff0000;">请简要描述售卖的商品或提供的服务，必须在营业执照经营范围内，且必须与所选类目对应一致。</span><br />
                        <span style="color:#ff0000;">请勿直接照抄营业执照中的经营范围，否则将会导致您的申请资料被驳回。</span>
                        </td>
                    </tr>

                </table>
            </div>

            <div class="formbox tab2" style="display:none;border-bottom:0px;">

                <table class="table-form" width="100%" id="table_OrderList">

                    <tr>
                        <td class="name">商户号：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:false,prompt:'',width:120,readonly:true" })</td>
                        <td class="name" style="width:8%;">商户名称：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:false,prompt:'',width:120,readonly:true" })</td>
                        <td class="name">注册地址：</td>
                        <td class="input">@Html.TextBoxFor(o => o.Title, new { @class = "easyui-textbox", data_options = "required:false,prompt:'与营业执照一致',width:140" })</td>
                    </tr>

                </table>

            </div>

            <div class="formbox tab3" style="display:none; border-bottom:0px;">
                <table class="table-form" width="100%" id="tabSummary">

                    <tr style="background-color:#eff4fb">
                        <td class="name" style="width:13%;text-align:center;">回访日期</td>
                        <td style="text-align:center;">回访小结</td>
                        <td style="text-align:center; width:7%;">记录人</td>
                        <td style="text-align:center; width:9%;">记录时间</td>
                        <td style="text-align:center; width:9%;">修改时间</td>
                        <td style="text-align:center;width:5%;">操作</td>
                    </tr>

                    @foreach (var v in ViewBag.VisitTrack as List<ViewVisitTrack>)
                    {
                        <tr name="addVisit">
                            <td style="text-align:center;"><input class="datacontrol noedit" style="width:75%;" onclick="clickTime(this)" value="@v.VisitDT" /></td>
                            <td style="text-align:left; padding:7px 10px;" onclick="editSummary(this)">@v.Content</td>
                            <td style="text-align:center;">@v.FullName<input type="hidden" value="@v.CreateUID" name="uid" /></td>
                            <td style="text-align:center;">@v.CreateDT</td>
                            <td style="text-align:center;">@v.UpdateDT</td>
                            <td style="text-align:center;"><a href="javascript:;" onclick="delSummary(this)" class="a_del">删除</a></td>
                        </tr>
                    }

                    <tr name="tr_VisitTrack">
                        <td style="text-align:center;">
                            <div style="padding-bottom:27px;"><input class="Wdate datacontrol" style="width:75%;" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd',readOnly:true,isShowClear:false})" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="VisitDT" /></div>
                        </td>
                        <td style="text-align:center;">
                            <input id="txtSummary" maxlength="100" type="text" style="width:510px;" value="" class="easyui-validatebox" data-options="novalidate:false,required:true,validType: 'length[1,100]'" name="txtSummary" />
                            <div style="text-align:left; margin-top:10px; padding-left:12px;">限长100个字，还可以输入<span style="color:#FF0000;" id="spanSummary">100</span>个字</div>
                        </td>
                        <td style="text-align:center;">
                            @ViewBag.Create <input type="hidden" value="@Model.CreateUID" name="uid" />
                            <input type="hidden" value="@ViewBag.Create" name="name" />
                        </td>
                        <td style="text-align:center;"></td>
                        <td style="text-align:center;"></td>
                        <td style="text-align:center;">
                            <a href="javascript:;" class="easyui-linkbutton" onclick="addSummary()" id="addVisit">添加</a>
                        </td>
                    </tr>

                    <input type="hidden" value="" id="h_VisitTrack" name="h_VisitTrack" />


                </table>
            </div>

        </div>
    }
</div>


