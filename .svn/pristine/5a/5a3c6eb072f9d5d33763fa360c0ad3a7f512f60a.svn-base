@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewData.OpBtnInfo(new OpBtnInfo(addText: "申请支付许可", hideDel: true, searchHeight: 50));
}

<style type="text/css">
    .table-toolbar .s_tr td {
        padding-top: 9px;
    }
</style>

@section search{
    <table class="table-toolbar">
        <tr>

            <td class="label-toolbar">
                <label>指派人：</label>
            </td>
            <td class="input-toolbar">
                @Form.Combobox("AssignerUID", ViewBag.user as List<SelectListItem>, dataOptions: "editable:false,panelMaxHeight:200")
            </td>
            <td class="label-toolbar">
                <label>申请日期：</label>
            </td>
            <td class="input-toolbar">
                <input name="CreateDT_begin" id="" class="Wdate datacontrol" style="width: 100px;" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" />
            </td>
            <td class="label-toolbar">
                <label style="width:10px;margin-right:3px;position:relative;top:-4px;">-</label>
            </td>
            <td class="input-toolbar">
                <input name="CreateDT_end" id="" class="Wdate datacontrol" style="width: 100px;" onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" />
            </td>
            <td class="label-toolbar">
                <label>关键字：</label>
            </td>
            <td class="input-toolbar" style="padding-right:10px;">
                @Html.DropDownList("keywordType", new List<SelectListItem>() { new SelectListItem() { Text = "按商户号", Value = "0" }, new SelectListItem() { Text = "按客户名称", Value = "1" }, new SelectListItem() { Text = "按合同号", Value = "2" }}, new { @class = "easyui-combobox datacontrol", data_options = "novalidate:true, editable: false,width:120" })
            </td>
            <td class="input-toolbar">
                <input name="keyword" class="datacontrol easyui-textbox font-12" placeholder="" data-options="prompt:'关键字',width:231" />
            </td>

        </tr>

    </table>
}
@section toolbar
{
    <a href="#" class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-stale'" onclick="upStatus(2)">设为可用支付</a>
    <a href="#" class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-stale'" onclick="upStatus(3)">暂停支付许可</a>
    <a href="#" class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-stale'" onclick="upStatus(4)">注销支付许可</a>
    <a href="#" class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-stale'" onclick="upStatus(5)">设为无效支付</a>
    <a href="#" class="easyui-linkbutton cus1 linkbtn" data-options="iconCls:'icon-stale'" onclick="">删除支付许可</a>
}
<script type="text/javascript">

    pharos.manager.$dg.datagrid({
        rowStyler: function (index, row) {
            if (row.Status == 0) return 'background-color:#ede9e9;color:#9d9c9c';
        }
    })

    pharos.manager.frozenColumns = [[
        { field: 'Id', checkbox: true },
        { field: 'Title', title: '指派人', editor: { type: 'text', required: true }, width: 100 },
        {
            field: 'AgentType', title: '审核状态', editor: { type: 'text', required: true }, width: 100, formatter: function (value, row, index) {
                return "";
            }
        },
        { field: 'FullName', title: '商户号', editor: { type: 'text', required: true }, width: 100 },
        { field: 'FullName', title: '商家公司名称', editor: { type: 'text', required: true }, width: 240 }
    ]];

    pharos.manager.columns = [[
        { field: 'AgentsId', title: '合同号', editor: { type: 'text', required: true }, width: 100 },
        { field: 'FullName', title: '城市', editor: { type: 'text', required: true }, width: 120 },
        { field: 'LoginName', title: '所属体系', editor: { type: 'text', required: true }, width: 100 },
        { field: 'LatestLogin', title: '注册地址', editor: { type: 'text', required: true }, width: 120 },
        { field: 'Memo', title: '品牌名称', editor: { type: 'text', required: true }, width: 120 },
        { field: 'Memo', title: '营业执照注册号', editor: { type: 'text', required: true }, width: 120 },
        { field: 'Memo', title: '经营范围', editor: { type: 'text', required: true }, width: 100 },
        { field: 'Memo', title: '商家业务联系人', editor: { type: 'text', required: true }, width: 150 },
        { field: 'Memo', title: '商家业务联系人电话', editor: { type: 'text', required: true }, width: 150 },
        { field: 'Memo', title: '商家业务联系人邮箱', editor: { type: 'text', required: true }, width: 150 },
        { field: 'Memo', title: '备注', editor: { type: 'text', required: true }, width: 250 },
        { field: 'Memo', title: '申请时间', editor: { type: 'text', required: true }, width: 120 },
        { field: 'Memo', title: '申请人', editor: { type: 'text', required: true }, width: 100 }
    ]];

    pharos.manager.addItem = function () {
        this.Id = "";
        openWin({ 'title': this.addText, 'width': 1000, 'height': 560, hideSave: false, 'url': this.editurlNocache() });
    };

    pharos.manager.editItem = function (id, row) {
        this.Id = id;
        openWin({ 'title': this.editText, 'width': 1000, 'height': 560, hideSave: false, 'url': this.editurlNocache() });
    }

    //将所选项设为
    function upStatus(s) {
        var rows = pharos.manager.selectItems();
        if (!rows) return;
        var ids = $.map(rows, function (item) {
            return item.Id;
        }).join();
        $.post("@Url.Action("upStatus")", { ids: ids, Status:s, t: Math.random()}, function (d) {
            if (d.successed) {
                $.messager.alert("提示", "设置成功！", "info");
                pharos.manager.gridReload();
            } else {
                $.messager.alert("提示", "设置失败！" + d.message, "error");
            }
        }, "json");
    }

    $(function () {

    });
</script>


