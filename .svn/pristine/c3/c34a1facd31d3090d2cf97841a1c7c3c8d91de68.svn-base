using System;
using System.Collections.Generic;
using System.Linq;
using Pharos.Logic.OMS.Entity;
using Pharos.Logic.OMS.BLL;
using Pharos.Utility.Helpers;
using System.Web.Mvc;
namespace Pharos.OMS.Retailing.Controllers
{
    public class OuterApiController : Controller
    {
        [Ninject.Inject]
        ProductService ProductService { get; set; }
        public ActionResult GetProductByBarcode(string barcode)
        {
            var obj= ProductService.GetProductByBarcode(barcode);
            return Content(obj == null ? "" : obj.ToJson());
        }
    }
}
