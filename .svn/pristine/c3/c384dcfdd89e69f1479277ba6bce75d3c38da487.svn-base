using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Pharos.MessageAgent.Data
{
    public class Message
    {
        public string Code { get; set; }
        public string Content { get; set; }
        public object OtherInformaction { get; set; }

        public static Message ErrorMessage(string content, string code = "500", object other = null)
        {
            return CreateMessage(content, code, other);
        }
        public static Message CreateMessage(string content, string code, object other)
        {
            return new Message() { Code = code, Content = content, OtherInformaction = other };
        }
        public static Message DebugMessage(string content, string code = "200", object other = null)
        {
            return CreateMessage(content, code, other);
        }
        public static Message InfoMessage(string content, string code = "200", object other = null)
        {
            return CreateMessage(content, code, other);
        }
        public static Message SuccessMessage(string content, string code = "200", object other = null)
        {
            return CreateMessage(content, code, other);
        }
        public static Message ExceptionMessage(string content, string code = "500", object other = null)
        {
            return CreateMessage(content, code, other);
        }
    }
}
