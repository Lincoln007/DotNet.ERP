using Pharos.Logic.ApiData.Pos.ValueObject;
using Pharos.Logic.ApiData.Pos.Exceptions;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Pharos.Logic.ApiData.Pos.Sale;

namespace Pharos.Logic.ApiData.Pos.User
{
    /// <summary>
    /// 店员权限及登录验证
    /// </summary>
    public class Salesclerk
    {
        /// <summary>
        /// 验证用户登录
        /// </summary>
        /// <param name="userParams">登录参数</param>
        /// <returns></returns>
        public LoginResult Login(LoginParams userParams)
        {
            var dataAdapter = DataAdapter.DataAdapterFactory.Factory(MachinesSettings.Mode, userParams.StoreId, userParams.MachineSn);
            var userInfo = dataAdapter.GetUser(userParams.Account);
            if (userInfo == null)
            {
                throw new LoginExecption("401", "账号错误！");
            }
            if (userInfo.LoginPwd != userParams.Password)
            {
                throw new LoginExecption("401", "密码错误！");
            }
            //本店角色（1:店长、2:营业员、3:收银员、4:数据维护），格式：门店ID,角色ID|门店ID,角色ID

            if (!(VerfyOperateAuth(userInfo, dataAdapter.StoreId, StoreOperateAuth.Cashier) || VerfyOperateAuth(userInfo, dataAdapter.StoreId, StoreOperateAuth.DataManager)))
            {
                throw new LoginExecption("402", "非销售员或数据维护员不允许登录销售！");
            }
            var shoppingcart = ShoppingCartFactory.Factory(userParams.StoreId, userParams.MachineSn);
            if (shoppingcart.MachineInformation == null)
            {
                shoppingcart.MachineInformation = new MachineInformation();
            }
            shoppingcart.MachineInformation.CashierName = userInfo.FullName;
            shoppingcart.MachineInformation.CashierOperateAuth = userInfo.OperateAuth;
            shoppingcart.MachineInformation.CashierUid = userInfo.UID;
            shoppingcart.MachineInformation.CashierUserCode = userInfo.UserCode;
            shoppingcart.MachineInformation.StoreName = userInfo.StoreName;
            shoppingcart.MachineInformation.StoreId = userParams.StoreId;
            shoppingcart.MachineInformation.MachineSn = userParams.MachineSn;
            shoppingcart.MachineInformation.MarketingManager = new Sale.Marketings.MarketingManager(userParams.StoreId);
            return new LoginResult()
            {
                FullName = userInfo.FullName,
                OperateAuth = userInfo.OperateAuth,
                UserCode = userInfo.UserCode,
                StoreName = userInfo.StoreName
            };
        }

        private bool VerfyOperateAuth(UserInfo userInfo, string storeId, StoreOperateAuth storeOperateAuth)
        {
            return userInfo.OperateAuth.Contains(string.Format("{0},{1}", storeId, (int)storeOperateAuth));
        }


        public bool VerfyStoreManagerOperateAuth(string storeId, string machineSn, string password)
        {
            var dataAdapter = DataAdapter.DataAdapterFactory.Factory(MachinesSettings.Mode, storeId, machineSn);
            var storeManagers = dataAdapter.GetStoreManagers(StoreOperateAuth.ShopManager);
            foreach (var item in storeManagers)
            {
                if (VerfyOperateAuth(item, storeId, StoreOperateAuth.ShopManager) && item.LoginPwd == password)
                {
                    return true;
                }
            }
            return false;
        }

        public void PosIncomePayout(string storeId, string machineSn, string userCode, string password, decimal money, PosIncomePayoutMode mode)
        {
            var dataAdapter = DataAdapter.DataAdapterFactory.Factory(MachinesSettings.Mode, storeId, machineSn);
            var userInfo = dataAdapter.GetUser(userCode);
            if (userInfo == null)
            {
                throw new LoginExecption("401", "账号错误！");
            }
            if (userInfo.LoginPwd != password)
            {
                throw new LoginExecption("401", "密码错误！");
            }
            dataAdapter.PosIncomePayout(userInfo.UID, money, mode);
        }
    }
}
