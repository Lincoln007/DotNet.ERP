using System;
using System.Windows;

namespace Pharos.POS.Retailing.Models.Scanner
{
    public interface IScanner
    {
        /// <summary>
        /// 设置启动扫描监视（全局）
        /// </summary>
        /// <param name="win">限定生效窗体</param>
        /// <param name="SetValue">扫描结果回调</param>
        void SetScanner(Window win, Action<string,ScannerType> SetValue);
        /// <summary>
        /// 扫描枪模拟类型
        /// </summary>
        ScannerType Type { get; }
    }
    /// <summary>
    /// 扫描枪模拟类型
    /// </summary>
    public enum ScannerType
    {
        /// <summary>
        /// 模拟键盘模式
        /// </summary>
        Keyboard = 0
    }
}
