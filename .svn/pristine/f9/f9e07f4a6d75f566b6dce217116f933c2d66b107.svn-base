<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
              xmlns:model="clr-namespace:Pharos.POS.Retailing.Models.ViewModels;assembly=Pharos.POS.Retailing"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
              DataType="{x:Type model:ServicesConfiguration}">
    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="titleStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style x:Key="contentStyle" TargetType="{x:Type control:IconTextBox}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="200"></Setter>
                <Setter Property="Height" Value="40"></Setter>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="3"></Setter>
            </Style>
            <Style TargetType="{x:Type control:PosButton}">
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="180"></Setter>
                <Setter Property="Height" Value="45"></Setter>
            </Style>
            <Style TargetType="GroupBox">
                <Setter Property="Foreground" Value="White"></Setter>

                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="BorderBrush" Value="Gray"></Setter>
                <Setter Property="Margin" Value="10,5"></Setter>

            </Style>
            <Style TargetType="{x:Type control:ToggleSwitchButton}">
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
        </StackPanel.Resources>

        <GroupBox Header="数据同步">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <control:ToggleSwitchButton  Grid.Row="0" Content="自动同步" Margin="0,0,50,0"  IsChecked="{Binding EnableAutoDataSync,Mode=TwoWay}"></control:ToggleSwitchButton>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="服务器IP："></TextBlock>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding DataSyncServerIp,Mode=TwoWay}"></control:IconTextBox>
                    <TextBlock Grid.Column="2" Style="{StaticResource titleStyle}" Text="端口："></TextBlock>
                    <control:IconTextBox  Grid.Column="3" Style="{StaticResource contentStyle}" Width="90" Text="{Binding DataSyncServerPort,Mode=TwoWay}"></control:IconTextBox>
                </Grid>
            </Grid>
        </GroupBox>
        <GroupBox Header="API设置">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0">
                    <control:ToggleSwitchButton Content="优先远程API" IsChecked="{Binding ServerPreferred,Mode=TwoWay}"></control:ToggleSwitchButton>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="230"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="本地API端口："></TextBlock>
                        <control:IconTextBox  Grid.Column="1" Style="{StaticResource contentStyle}" Width="90" Text="{Binding LocalPort,Mode=TwoWay}"></control:IconTextBox>
                    </Grid>
                </WrapPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="远程API："></TextBlock>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Width="350" Text="{Binding ServerHost,Mode=TwoWay}"></control:IconTextBox>
                </Grid>

            </Grid>
        </GroupBox>
        <GroupBox Header="软件更新">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="当前版本：" Style="{StaticResource titleStyle}"></TextBlock>
                <TextBlock Grid.Column="1" Text="{Binding CurrentVersion,Mode=OneWay}" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"></TextBlock>
                <control:PosButton Grid.Column="2" Content="更新" Width="120" Margin="0" Background="Gray" Command="{Binding UpdateCommand}" ></control:PosButton>
            </Grid>
        </GroupBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <control:PosButton Grid.Column="1" Content="保存" Background="#659D15" Command="{Binding SaveCommand}" ></control:PosButton>
        </Grid>
    </StackPanel>
</DataTemplate>
