@{
    ViewBag.Title = "CreateMember";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <div id="tt1" class="easyui-tabs" data-options="onSelect:function(title,index){}" style="height:auto;">
                <div title=" 基本信息">
                    <table class="table-form" width="100%">
                        <tr>
                            <td class="name">来源：</td>
                            <td class="input"><select class="easyui-combobox"><option>请选择</option><option>门店1</option></select></td>
                            <td class="name">编号：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                        </tr>
                        <tr>
                            <td class="name">名称：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">性别：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                        </tr>
                        <tr>
                            <td class="name">默认优惠方式：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">默认积分方式：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                        </tr>
                        <tr>
                            <td class="name">证件号：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">生日：</td>
                            <td class="input"><input type="text" class="easyui-validatebox Wdate" /></td>
                        </tr>
                        <tr>
                            <td class="name">手机号：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">微信号：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                        </tr>
                        <tr>
                            <td class="name">支付宝：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">Email：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                        </tr>
                        <tr>
                            <td class="name">居住地址：</td>
                            <td class="input"><input type="text" class="easyui-textbox" /></td>
                            <td class="name">状态：</td>
                            <td class="input">@Html.RadioButtonList(new List<SelectListItem>() { new SelectListItem() { Text = "未审" }, new SelectListItem() { Text = "正常" }, new SelectListItem() { Text = "无效" } },"state")</td>
                        </tr>
                    </table>
                </div>
                <div title=" 卡片信息"></div>
                <div title=" 扩展信息"></div>
            </div>
        </div>
    }
</div>
