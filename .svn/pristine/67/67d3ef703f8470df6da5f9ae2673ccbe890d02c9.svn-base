<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.ZhiFuWanCheng"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="支付完成" Height="500" Width="800" WindowStartupLocation="CenterScreen" Icon="..\..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\Styles\ZhiFuWanChengStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        <Image Width="60" HorizontalAlignment="Right" Margin="10" Source="..\Images\ZhiFuFangShi\finish.png"></Image>
        <TextBlock Grid.Column="1" Style="{StaticResource titleStyle}"><Run Text="成功付款"></Run><Run Text="{Binding Amount,StringFormat='{}{0:N2}'}"></Run><Run Text="元"></Run></TextBlock>
        </Grid>
        <TextBlock Style="{StaticResource titleStyle}" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="18" Grid.Row="1"><Run Text="("></Run><Run Text="{Binding Second}"></Run><Run Text="秒后自动关闭)"/></TextBlock>

        <control:PosButton Style="{StaticResource BtnSearchStyle}" Grid.ColumnSpan="2" Grid.Row="2" Content="完成，返回销售界面" Command="{Binding CloseCommand}"></control:PosButton>
    </Grid>
</control:DialogWindow02>