<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.ZhiFuBaoFuKuan"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="支付宝支付"  Height="380" Width="500" WindowStartupLocation="CenterScreen" Icon="..\..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\Styles\ZhiFuBaoFuKuanStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="应付金额：" Style="{StaticResource titleStyle}"></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"><Run Text="￥"></Run><Run Text="{Binding Amount,StringFormat='{}{0:N2}'}"></Run></TextBlock>
        <TextBlock Grid.Row="1" Text="支付金额：" Style="{StaticResource titleStyle}"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"><Run Text="￥"></Run><Run Text="{Binding Amount,StringFormat='{}{0:N2}'}"></Run></TextBlock>
        <TextBlock Grid.Row="2" Text="付款码：" Style="{StaticResource titleStyle}"></TextBlock>
        <control:IconTextBox  Name="txtBarcode"  TabIndex="0" Grid.Row="2" Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding UserPayInfo}"></control:IconTextBox>


        <control:PosButton TabIndex="1" Style="{StaticResource BtnSearchStyle}" Grid.Row="3" Grid.ColumnSpan="2" Content="完成支付" Command="{Binding ConfirmCommand}"></control:PosButton>
    </Grid>
</control:DialogWindow02>