@{
    ViewBag.Title = "CreateMemberGrade";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <table class="table-form" width="100%">
                <tr>
                    <td class="name">名称：</td>
                    <td class="input"><input type="text" class="easyui-textbox" /></td>
                </tr>
                <tr>
                    <td class="name">优惠方式：</td>
                    <td class="input"><select class="easyui-combobox"><option>无</option><option>方案折扣</option><option>固定折扣</option></select></td>
                </tr>
                <tr>
                    <td class="name">积分方式：</td>
                    <td class="input"><select class="easyui-combobox"><option>无</option><option>方案积分</option></select></td>
                </tr>
                <tr>
                    <td class="name">升级分值：</td>
                    <td class="input"><input type="text" class="easyui-validatebox"/></td>
                </tr>
                <tr>
                    <td class="name">等级说明：</td>
                    <td class="input"><textarea style="width:150px;height:60px;" class="easyui-validatebox"></textarea></td>
                </tr>
            </table>
        </div>
    }
</div>