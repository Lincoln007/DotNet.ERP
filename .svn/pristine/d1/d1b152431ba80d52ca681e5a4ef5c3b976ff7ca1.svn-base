using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace Pharos.Api.Retailing.Models.Mobile
{
    /// <summary>
    /// 扫码支付请求参数
    /// </summary>
    public class PayRequest : BaseParams
    {
        /// <summary>
        /// 消费金额
        /// </summary>
        public decimal Price { get; set; }
        /// <summary>
        /// 会员卡号
        /// </summary>
        public string CardSN { get; set; }
        /// <summary>
        /// 使用积分
        /// </summary>
        public decimal UseIntegral { get; set; }
        /// <summary>
        /// 抵扣金额
        /// </summary>
        public decimal DiscountAmount { get; set; }
        /// <summary>
        /// 实收金额
        /// </summary>
        public decimal Received { get; set; }
        /// <summary>
        /// 获取积分
        /// </summary>
        public decimal GetAmount { get; set; }
    }
}