using System;

namespace Pharos.Logic.Entity
{
	/// <summary>
	/// 用于管理本系统的会员等级信息 
	/// </summary>
	[Serializable]
	public class MemberLevel
	{
		/// <summary>
		/// 记录 ID 
		/// [主键：√]
		/// [长度：10]
		/// [不允许为空]
		/// </summary>
		public int Id { get; set; }

		/// <summary>
		/// 公司CID
		/// [长度：10]
		/// [不允许为空]
		/// [默认值：((-1))]
		/// </summary>
		public int CompanyId { get; set; }

		/// <summary>
		/// 等级编号 4 
		/// [长度：10]
		/// [不允许为空]
		/// </summary>
		public int LevelSN { get; set; }

		/// <summary>
		/// 等级名称 
		/// [长度：40]
		/// [不允许为空]
		/// </summary>
		public string LevelTitle { get; set; }

		/// <summary>
		/// 优惠方式（0:无1:方案折扣，2:固定折扣） 
		/// [长度：5]
		/// [默认值：((0))]
		/// </summary>
		public short CouponType { get; set; }

		/// <summary>
		/// 固定折扣 
		/// [长度：19，小数位数：4]
		/// </summary>
		public decimal Discount { get; set; }

		/// <summary>
		/// 积分方式(0:无，1:方案积分)
		/// [长度：5]
		/// [默认值：((0))]
		/// </summary>
		public short IntegerType { get; set; }

		/// <summary>
		/// 自动升级(0:否，1:是)
		/// [长度：1]
		/// [不允许为空]
		/// [默认值：((0))]
		/// </summary>
		public bool AutoUpdate { get; set; }

		/// <summary>
		/// 升级分值
		/// [长度：10]
		/// [不允许为空]
		/// </summary>
		public int UpgradeScore { get; set; }

		/// <summary>
		/// 等级说明
		/// [长度：200]
		/// </summary>
		public string Memo { get; set; }

		/// <summary>
		/// 等级状态（0：生效；1：已无效）
		/// [长度：5]
		/// </summary>
		public short State { get; set; }

		/// <summary>
		/// 创建时间
		/// [长度：23，小数位数：3]
		/// [不允许为空]
		/// [默认值：(getdate())]
		/// </summary>
		public DateTime CreateDT { get; set; }

		/// <summary>
		/// 创建人
		/// [长度：40]
		/// [不允许为空]
		/// </summary>
		public string CreateUID { get; set; }
	}
}
