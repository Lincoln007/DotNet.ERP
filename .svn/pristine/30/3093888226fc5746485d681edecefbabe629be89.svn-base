@{
    ViewBag.Title = Pharos.Sys.SysConstPool.Page_Title;
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<style>
    .table-form .input input { width: 180px; }
</style>

<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <div class="formbox" style="border-bottom:0; line-height:35px;">
                <div style="width:100%;">
                    <div class="name" style="width:16%;">适用门店：</div>
                </div>

                <table class="table-form" width="100%">
                    <tr>
                        <td class="name">appID：</td>
                        <td class="input">
                            <input class="easyui-textbox datacontrol" />
                        </td>
                        <td class="name">mchID：</td>
                        <td class="input">
                            <input class="easyui-textbox datacontrol" />
                        </td>
                    </tr>

                    <tr>
                        <td class="name">支付密钥：</td>
                        <td class="input">
                            <input class="easyui-textbox datacontrol" />
                        </td>
                        <td class="name">支付通知页面：</td>
                        <td class="input">
                            <input class="easyui-textbox datacontrol" />
                        </td>
                    </tr>
                    <tr>
                        <td class="name">状态：</td>
                        <td class="input">
                            @*<input type="checkbox" class="label-input" name="MasterState" value="1" @(Model.MasterState == 1 ? "checked='checked'" : "") /><label>可用</label>*@
                            <input type="checkbox" class="label-input" name="MasterState" value="1" checked='checked' style="width:15px;" /><label>可用</label>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>

                </table>
            </div>
        </div>



    }
</div>
