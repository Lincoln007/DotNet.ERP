<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.TuiHuanHuo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="退换货" Height="800" Width="1024" WindowStartupLocation="CenterScreen" Icon="..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\TuiHuanHuoStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <converter:EnumForTitleConverter x:Key="EnumForTitleConverter"></converter:EnumForTitleConverter>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl>
        <TabItem Header="换货" DataContext="{Binding Change}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="859*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                </Grid.RowDefinitions>

                <DataGrid  ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="10" ItemsSource="{Binding ChangeList,Mode=TwoWay}" BorderThickness="1" BorderBrush="#BCB4BB"  VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#D6DBE9" CanUserSortColumns="False" CanUserDeleteRows="True" CanUserAddRows="False" CanUserReorderColumns="False" HeadersVisibility="Column"  AutoGenerateColumns="False" Grid.ColumnSpan="2">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Barcode}" IsReadOnly="True" Header="条码" Width="190">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Title}" IsReadOnly="True" Header="品名" Width="200*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ChangePrice,StringFormat='{}{0:N}'}" IsReadOnly="True" Header="售价" Width="100"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ChangeNumber}" IsReadOnly="True" Header="数量" Width="100"></DataGridTextColumn>
                        <DataGridTemplateColumn Header="操作" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition  Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition  Width="30"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <control:PosButton Grid.Column="0" BorderBrush="#5C5753" BorderThickness="1"  FontSize="16" Width="50" Height="30"  Background="White" Foreground="#5C5753" Content="编辑" Command="{Binding EditCommand}"/>
                                        <control:PosButton Grid.Column="1" BorderBrush="#B85D5C" BorderThickness="1"  FontSize="16" Width="50" Height="30"  Background="White" Foreground="#B85D5C" Content="移除" Command="{Binding RemoveCommand}"/>

                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock MouseDown="txtMode_MouseDown" Grid.Column="0" Style="{StaticResource titleStyle}"><Run Text="{Binding Converter={StaticResource EnumForTitleConverter},Path=Mode,Mode=TwoWay}"></Run><Run Text="："></Run></TextBlock>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Barcode,Mode=TwoWay}"></control:IconTextBox>

                    <TextBlock Style="{StaticResource titleStyle}" Grid.Column="2">换货理由：</TextBlock>
                    <ComboBox  Grid.Column="3" ItemsSource="{Binding ReasonItem}" DisplayMemberPath="Title" SelectedValuePath="DicSN" SelectedValue="{Binding Reason}"></ComboBox>

                    <TextBlock  Grid.Column="4" Style="{StaticResource titleStyle}" Text="顾客补价："></TextBlock>
                    <control:IconTextBox Grid.Column="5" Style="{StaticResource contentStyle}" Text="{Binding Difference,StringFormat='{}{0:N}'}"></control:IconTextBox>
                    <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource titleStyle}" Text="授权密码：" ></TextBlock>
                    <control:IconPasswordBox Grid.Row="1" Grid.Column="1" Style="{StaticResource  passwordStyle}" Password="{Binding Password,Mode=TwoWay}"></control:IconPasswordBox>

                    <control:PosButton Grid.ColumnSpan="10" Grid.Row="2" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center" Content="确定" Command="{Binding ConfirmCommand}"></control:PosButton>

                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="退货" Height="42" Margin="0,-2,0,0" VerticalAlignment="Bottom" DataContext="{Binding Refund}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="859*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                </Grid.RowDefinitions>

                <DataGrid  ScrollViewer.VerticalScrollBarVisibility="Visible"  Margin="10" ItemsSource="{Binding ChangeList,Mode=TwoWay}" BorderThickness="1" BorderBrush="#BCB4BB"  VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#D6DBE9" CanUserSortColumns="False" CanUserDeleteRows="True" CanUserAddRows="False" CanUserReorderColumns="False" HeadersVisibility="Column"  AutoGenerateColumns="False" Grid.ColumnSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Barcode}" IsReadOnly="True" Header="条码" Width="190">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Title}" IsReadOnly="True" Header="品名" Width="200*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ChangePrice,StringFormat='{}{0:N}'}" IsReadOnly="True" Header="售价" Width="100"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ChangeNumber}" IsReadOnly="True" Header="数量" Width="100"></DataGridTextColumn>
                        <DataGridTemplateColumn Header="操作" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition  Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition  Width="30"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <control:PosButton Grid.Column="0" BorderBrush="#5C5753" BorderThickness="1"  FontSize="16" Width="50" Height="30"  Background="White" Foreground="#5C5753" Content="编辑" Command="{Binding EditCommand}"/>
                                        <control:PosButton Grid.Column="1" BorderBrush="#B85D5C" BorderThickness="1"  FontSize="16" Width="50" Height="30"  Background="White" Foreground="#B85D5C" Content="移除" Command="{Binding RemoveCommand}"/>

                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock  Grid.Column="0" Style="{StaticResource titleStyle}" Text="原条码："></TextBlock>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding Barcode,Mode=TwoWay}"></control:IconTextBox>

                    <TextBlock Style="{StaticResource titleStyle}" Grid.Column="2">退货理由：</TextBlock>
                    <ComboBox  Grid.Column="3" ItemsSource="{Binding ReasonItem}" DisplayMemberPath="Title" SelectedValuePath="DicSN" SelectedValue="{Binding Reason,Mode=TwoWay}"></ComboBox>

                    <TextBlock  Grid.Column="4" Style="{StaticResource titleStyle}" Text="顾客补价："></TextBlock>
                    <control:IconTextBox Grid.Column="5" Style="{StaticResource contentStyle}" Text="{Binding Difference,StringFormat='{}{0:N}',Mode=TwoWay}"></control:IconTextBox>
                    <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource titleStyle}" Text="授权密码：" ></TextBlock>
                    <control:IconPasswordBox Grid.Row="1" Grid.Column="1" Style="{StaticResource  passwordStyle}" Password="{Binding Password,Mode=TwoWay}"></control:IconPasswordBox>
                    <control:PosButton Grid.ColumnSpan="10" Grid.Row="2" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center" Content="确定"  Command="{Binding ConfirmCommand}"></control:PosButton>

                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="退单" DataContext="{Binding RefundOrder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="859*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="250"></RowDefinition>
                </Grid.RowDefinitions>
                <DataGrid  ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="10" ItemsSource="{Binding OrderList,Mode=OneWay}" BorderThickness="1" BorderBrush="#BCB4BB"  VerticalGridLinesBrush="Transparent" HorizontalGridLinesBrush="#D6DBE9" CanUserSortColumns="False" CanUserDeleteRows="True" CanUserAddRows="False" CanUserReorderColumns="False" HeadersVisibility="Column"  AutoGenerateColumns="False" Grid.ColumnSpan="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Barcode}" IsReadOnly="True" Header="条码" Width="190">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Title}" IsReadOnly="True" Header="品名" Width="200*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Height" Value="auto"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding ActualPrice,StringFormat='{}{0:N}'}" IsReadOnly="True" Header="售价" Width="100*"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Number}" IsReadOnly="True" Header="数量" Width="100*"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Total}" IsReadOnly="True" Header="小计" Width="100*"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                        <RowDefinition Height="90"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock  Grid.Column="0" Style="{StaticResource titleStyle}" Text="订单号："></TextBlock>
                    <control:IconTextBox Grid.Column="1" Style="{StaticResource contentStyle}" Text="{Binding PaySn,Mode=TwoWay}"></control:IconTextBox>

                    <TextBlock Style="{StaticResource titleStyle}" Grid.Column="2">退货理由：</TextBlock>
                    <ComboBox  Grid.Column="3" ItemsSource="{Binding ReasonItem}" DisplayMemberPath="Title" SelectedValuePath="DicSN" SelectedValue="{Binding Reason}"></ComboBox>

                    <TextBlock  Grid.Column="4" Style="{StaticResource titleStyle}" Text="顾客补价："></TextBlock>
                    <control:IconTextBox Grid.Column="5" Style="{StaticResource contentStyle}" Text="{Binding Difference,StringFormat='{}{0:N}',Mode=TwoWay}"></control:IconTextBox>
                    <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource titleStyle}" Text="授权密码：" ></TextBlock>
                    <control:IconPasswordBox Grid.Row="1" Grid.Column="1" Style="{StaticResource  passwordStyle}" Password="{Binding Password,Mode=TwoWay}"></control:IconPasswordBox>
                    <control:PosButton Grid.ColumnSpan="10" Grid.Row="2" Style="{StaticResource BtnStyle}" HorizontalAlignment="Center" Content="确定"  Command="{Binding ConfirmCommand}"></control:PosButton>


                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</control:DialogWindow02>
