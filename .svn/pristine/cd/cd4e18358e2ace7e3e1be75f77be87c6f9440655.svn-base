@{
    ViewBag.Title = "CreateRechargeGift";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<div class="default-form">
    @using (Html.BeginForm())
    {
        <div class="content">
            <table class="table-form" width="100%">
                <tr>
                    <td class="name">活动有效期：</td>
                    <td class="input">
                        <input type="text" id="date1" class="easyui-validatebox Wdate" onclick="WdatePicker({dateFmt: 'yyyy-MM-dd',maxDate:'#F{$dp.$D(\'date2\')}'})" /> -
                        <input type="text" id="date2" class="easyui-validatebox Wdate" onclick="WdatePicker({dateFmt: 'yyyy-MM-dd',minDate:'#F{$dp.$D(\'date1\')}'})" />
                    </td>
                </tr>
                <tr>
                    <td class="name">活动时效：</td>
                    <td class="input">
                        <table>
                            <tr>
                                <td>@Html.RadioButtonList(new List<SelectListItem>() { new SelectListItem() { Text = "每天", Value = "0", Selected = true }, new SelectListItem() { Text = "每周", Value = "1" }, new SelectListItem() { Text = "时段", Value = "3" } }, "timetype")</td>
                                <td></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.TimeBoxList(new List<string>() { "09:00", "11:00", "13:00", "14:00", "15:00", "16:00" }, "Times")
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.RadioButtonList(new List<SelectListItem>() { new SelectListItem() { Text = "周一", Value = "1", Selected = true },
                       new SelectListItem() { Text = "周二", Value = "2" } ,new SelectListItem() { Text = "周三", Value = "3" } ,
                       new SelectListItem() { Text = "周四", Value = "4" } ,new SelectListItem() { Text = "周五", Value = "5" } ,
                       new SelectListItem() { Text = "周六", Value = "6" } ,new SelectListItem() { Text = "周日", Value = "7" } }, "timeWeek")
                    </td>
                </tr>
                <tr>
                    <td class="name">充值金额：</td>
                    <td class="input"><input type="text" class="easyui-textbox" /></td>
                </tr>
                <tr>
                    <td class="name">赠送项目：</td>
                    <td class="input">
                        <table>
                            <tr>
                                <td>@Html.RadioButtonList(new List<SelectListItem>() { new SelectListItem() { Text = "通用金额", Value = "0", Selected = true }, new SelectListItem() { Text = "会员积分", Value = "1" } }, "gifttype")</td>
                                <td><input type="text" class="easyui-textbox" data-options="width:60" /></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="name">分期赠送：</td>
                    <td class="input">
                        <table>
                            <tr>
                                <td>@Html.RadioButtonList(new List<SelectListItem>() { new SelectListItem() { Text = "即时赠送", Value = "0", Selected = true }, new SelectListItem() { Text = "多期赠送", Value = "1" } }, "gifttime")</td>
                                <td>
                                    分<input type="text" class="easyui-validatebox" style="width:50px" />期，
                                    @*每期赠送<input type="radio" />金额<input type="radio" />积分,*@
                                    每期赠送日期<input type="text" class="easyui-validatebox Wdate" style="width:100px" />
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="name">限量：</td>
                    <td class="input"><input type="text" class="easyui-textbox" /></td>
                </tr>
            </table>
        </div>
    }
</div>