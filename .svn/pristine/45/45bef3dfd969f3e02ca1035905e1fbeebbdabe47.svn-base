<control:DialogWindow02 x:Class="Pharos.POS.Retailing.ChildWin.ZhiFuFangShi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converter="clr-namespace:Pharos.Wpf.XamlConverters;assembly=Pharos.Wpf"       
         xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf"
        Title="日结" Height="550" Width="700" WindowStartupLocation="CenterScreen" Icon="..\Images\ChaKuCun\search.png" Margin="0" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ZhiFuFangShiStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="应付金额："></TextBlock>
            <TextBlock Grid.Column="1" Foreground="#598514" Style="{StaticResource titleStyle}" HorizontalAlignment="Left"><Run>￥</Run><Run Text="{Binding Amount}"></Run></TextBlock>
        </Grid>
        <ItemsControl BorderThickness="0,1" BorderBrush="Gray" Padding="10" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Payways}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <control:PosButton IsEnabled="{Binding Enabled}" Command="{Binding DoPayCommand}" BorderThickness="1" Padding="10" BorderBrush="Gray" Height="80" Width="200" Margin="5" Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left">
                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Icon}"></Image>
                                <TextBlock Grid.Column="1" TextWrapping="Wrap"  FontSize="25" VerticalAlignment="Center"  Text="{Binding Title}"></TextBlock>
                            </Grid>
                        </Button.Content>
                    </control:PosButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <control:PosButton Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Right"  Content="多方式付款" Style="{StaticResource BtnStyle}"></control:PosButton>
        <control:PosButton Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"  Content="关闭" Background="#659D15" Style="{StaticResource BtnStyle}"></control:PosButton>
    </Grid>
</control:DialogWindow02>