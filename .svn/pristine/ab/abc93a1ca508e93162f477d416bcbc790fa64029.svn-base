<DataTemplate xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
              xmlns:model="clr-namespace:Pharos.POS.Retailing.Models.ViewModels;assembly=Pharos.POS.Retailing"
        xmlns:control="clr-namespace:Pharos.Wpf.Controls;assembly=Pharos.Wpf" 
             DataType="{x:Type model:DevicesSettingsConfiguration}">
    <Grid HorizontalAlignment="Center">
        <Grid.Resources>
            <Style x:Key="titleStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style x:Key="contentStyle" TargetType="{x:Type control:IconTextBox}">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="200"></Setter>
                <Setter Property="Height" Value="40"></Setter>
            </Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="5"></Setter>
            </Style>
            <Style TargetType="{x:Type control:PosButton}">
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="Width" Value="180"></Setter>
                <Setter Property="Height" Value="45"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="扫码枪识别设置">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"></RowDefinition>

                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource titleStyle}" Text="扫描枪ID："></TextBlock>
                    <control:IconTextBox IsReadOnly="True" Grid.Column="1" Style="{StaticResource contentStyle}" Width="300" Text="{Binding ScanDeviceId,Mode=TwoWay}"></control:IconTextBox>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <control:PosButton Grid.Column="0"  Grid.ColumnSpan="2" Content="保存" Command="{Binding SaveCommand}" Background="#659D15" ></control:PosButton>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</DataTemplate>
